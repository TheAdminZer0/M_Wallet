@using M_Wallet.Shared
@using MudBlazor
@using M_Wallet.Client.Services
@using M_Wallet.Client.Components
@using System.Net.Http.Json
@inject HttpClient Http
@inject NotificationService Notify
@inject CustomAuthenticationStateProvider AuthStateProvider

@* Record payment against a single transaction *@
<MudDialog>
    <DialogContent>
        <MudText Class="mb-4">Recording payment for Order #@TransactionId</MudText>
        
        @* Payment details form *@
        <MudGrid>
            <MudItem xs="12">
                <MudNumericField @bind-Value="amount" Label="Payment Amount" Format="F2" Min="0.01m" Max="@BalanceDue" Adornment="Adornment.Start" AdornmentText="LD" Variant="Variant.Outlined" AutoFocus="true" Clearable="true" Placeholder="Enter amount" />
            </MudItem>
            <MudItem xs="12">
                <MudSelect @bind-Value="paymentMethod" Label="Payment Method" Variant="Variant.Outlined">
                    <MudSelectItem Value="@("Cash")">Cash</MudSelectItem>
                    <MudSelectItem Value="@("Card")">Card</MudSelectItem>
                    <MudSelectItem Value="@("Transfer")">Transfer</MudSelectItem>
                    <MudSelectItem Value="@("Check")">Check</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12">
                @if (isSystemUser)
                {
                    <MudText Typo="Typo.caption" Class="mb-1">Enter Pattern to Authorize</MudText>
                    <PatternAuthComponent OnAuthorized="OnAuthorized" />
                    @if (!string.IsNullOrEmpty(employeeName))
                    {
                        <MudText Color="Color.Success" Class="mt-2">Authorized by: @employeeName</MudText>
                    }
                }
                else
                {
                    <MudTextField @bind-Value="employeeName" Label="Employee Name" Variant="Variant.Outlined" Required="true" ReadOnly="@(currentEmployee != null)" />
                }
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="reference" Label="Reference / Notes" Variant="Variant.Outlined" Lines="2" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@string.IsNullOrWhiteSpace(employeeName)">Record Payment</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public int TransactionId { get; set; }
    [Parameter] public decimal BalanceDue { get; set; }
    [Parameter] public string? CustomerName { get; set; }

    private decimal? amount;
    private string paymentMethod = "Cash";
    private string reference = "";
    private string employeeName = "";
    private Person? currentEmployee;
    private bool isSystemUser => currentEmployee?.Role == "System";

    // Prefill amount and employee info on open
    protected override async Task OnInitializedAsync()
    {
        // amount starts empty (null) so user can type immediately
        currentEmployee = await AuthStateProvider.GetCurrentUserAsync();
        if (currentEmployee != null && !isSystemUser)
        {
            employeeName = currentEmployee.Name;
        }
    }

    // Pattern auth callback populates employee
    private void OnAuthorized(Person employee)
    {
        employeeName = employee.Name;
    }

    private void Cancel() => MudDialog.Cancel();

    // Validate and post payment to API
    private async Task Submit()
    {
        if (!amount.HasValue || amount <= 0)
        {
            Notify.Warning("Amount must be greater than 0");
            return;
        }

        if (string.IsNullOrWhiteSpace(employeeName))
        {
            Notify.Warning("Employee name is required");
            return;
        }

        if (amount > BalanceDue)
        {
            Notify.Warning($"Amount cannot exceed balance due (LD {BalanceDue:F2})");
            return;
        }

        var payment = new Payment
        {
            PaymentDate = DateTime.UtcNow,
            Amount = amount.Value,
            PaymentMethod = paymentMethod,
            Reference = reference,
            CustomerName = CustomerName,
            EmployeeName = employeeName,
            Allocations = new List<PaymentAllocation>
            {
                new PaymentAllocation
                {
                    TransactionId = TransactionId,
                    Amount = amount.Value
                }
            }
        };

        try
        {
            var response = await Http.PostAsJsonAsync("api/payments", payment);
            if (response.IsSuccessStatusCode)
            {
                Notify.Success("Payment recorded successfully");
                MudDialog.Close(DialogResult.Ok(true));
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                Notify.Error($"Failed to record payment: {error}");
            }
        }
        catch (Exception ex)
        {
            Notify.Error($"Error: {ex.Message}");
        }
    }
}
