    private void OnQuantityInputChanged(TransactionItem item, int? newQuantity)
    {
        if (newQuantity is null)
        {
            return;
        }

        var maxQuantity = GetMaxQuantity(item);
        var normalized = Math.Clamp(newQuantity.Value, 1, maxQuantity);
        item.Quantity = normalized;
        item.Subtotal = item.Quantity * item.UnitPrice;
    }

    private int GetMaxQuantity(TransactionItem item)
    {
        var product = item.Product;
        if (product is null)
        {
            return item.Quantity;
        }

        var totalForProduct = cartItems
            .Where(i => i.ProductId == item.ProductId)
            .Sum(i => i.Quantity);

        var otherQuantity = totalForProduct - item.Quantity;
        var max = product.StockQuantity - otherQuantity;
        return max > 0 ? max : item.Quantity;
    }

    private string GetProductImage(Product? product)
    {
        if (product is null || string.IsNullOrWhiteSpace(product.ImageUrl))
        {
            return "images/placeholder-product.svg";
        }

        return product.ImageUrl;
    }
