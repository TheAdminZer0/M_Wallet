    private async Task ClearCartAsync()
    {
        // Capture driver state if we want to keep it
        var keepDriver = keepDriverSelected && isDelivery;
        var savedDriver = selectedDriver;
        var savedDriverName = driverName;
        var savedDriverPhone = driverPhone;

        // Clear shared cart state immediately so navigation to other pages doesn't restore stale orders
        CartService.Clear();

        cartItems.Clear();
        await ClearCustomerSelection();
        orderNote = "";
        amountPaid = 0;
        applyDiscount = false;
        discountAmount = 0;
        
        if (keepDriver)
        {
            // Restore driver state
            isDelivery = true;
            selectedDriver = savedDriver;
            driverName = savedDriverName;
            driverPhone = savedDriverPhone;
            
            // Also update CartService so it reflects the kept state
            CartService.IsDelivery = true;
            CartService.SelectedDriver = savedDriver;
            CartService.DriverName = savedDriverName;
            CartService.DriverPhone = savedDriverPhone;
        }
        else
        {
            isDelivery = false;
            selectedDriver = null;
            driverName = "";
            driverPhone = "";
        }
    }

    private decimal CalculateTotal()
    {
        var total = cartItems.Sum(i => i.Subtotal);
        if (applyDiscount)
        {
            total -= discountAmount;
        }
        return total < 0 ? 0 : total;
    }

