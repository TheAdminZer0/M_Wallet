@page "/"
@using M_Wallet.Client.Components
@using System.Text.Json
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime
@inject IDialogService DialogService
@inject NavigationManager NavigationManager



<PageTitle>POS - Point of Sale</PageTitle>

<MudGrid Spacing="2">
    <!-- Main Product Area -->
    <MudItem xs="12" md="8">
        <ProductBrowser Products="@products" 
                        OnProductClicked="@AddToCart"
                        OnSplitClicked="@AddSeparateLineToCart"
                        GetAvailableStock="@GetAvailableStock"
                        @bind-SearchString="searchString">
        </ProductBrowser>
    </MudItem>

    <!-- Checkout Sidebar -->
    <MudItem xs="12" md="4">
       
        <MudPaper Class="pa-4" Elevation="2" Style="position: sticky; top: 16px; background-color:var(--mud-palette-gray-lighter);">
            <MudText Typo="Typo.h5" Class="mb-4">
                <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Class="mr-2" />
                Cart
            </MudText>
            
            @if (!cartItems.Any())
            {
                <MudAlert Severity="Severity.Info" Class="my-4">
                    Cart is empty.<br/>Tap items to add.
                </MudAlert>
            }
            else
            {
                <div style="max-height: 400px; overflow-y: auto;" class="mb-4">
                    @foreach (var item in cartItems)
                    {
                        var availableStock = GetAvailableStock(item.Product!);
                        var referencePrice = item.Product?.Price ?? item.UnitPrice;
                        <MudPaper Class="cart-item-card pa-2 mb-2" Elevation="2">
                            <div class="cart-item-line">
                                <div class="cart-item-info">
                                    <img src="@GetProductImage(item.Product)"
                                         alt="@item.Product?.Name"
                                         class="cart-item-image"
                                         loading="lazy" />
                                    <MudText Typo="Typo.body1" Class="font-weight-bold">
                                        @item.Product?.Name
                                    </MudText>
                                </div>
                                <div class="cart-item-right">
                                    <div class="cart-quantity-editor">
                                        <MudIconButton Icon="@Icons.Material.Filled.Remove" 
                                                       Size="Size.Small" 
                                                       Color="Color.Default"
                                                       OnClick="@(() => DecreaseQuantity(item))" />
                                        <MudNumericField T="int?"
                                                         Value="item.Quantity"
                                                         ValueChanged="@(val => OnQuantityInputChanged(item, val))"
                                                         ValueExpression="() => item.Quantity"
                                                         Min="1"
                                                         Max="@GetMaxQuantity(item)"
                                                         Immediate="true"
                                                         HideSpinButtons="true"
                                                         Dense="true"
                                                         Class="cart-qty-input" />
                                        <MudIconButton Icon="@Icons.Material.Filled.Add" 
                                                       Size="Size.Small" 
                                                       Color="Color.Default"
                                                       OnClick="@(() => IncreaseQuantity(item))"
                                                       Disabled="@(availableStock == 0)" />
                                    </div>
                                    <div class="cart-price-total">
                                        <div class="cart-price-edit">
                                            @if (editingItem == item)
                                            {
                                                <MudTextField @ref="priceInputRef"
                                                              Value="@editingPriceValue"
                                                              Margin="Margin.Dense"
                                                              Variant="Variant.Text"
                                                              Style="width: 80px;"
                                                              Immediate="true"
                                                              ValueChanged="@((string val) => OnPriceValueChanged(item, val))"
                                                              InputType="InputType.Text"
                                                              OnBlur="@(() => FinishEditing())"
                                                              @onkeydown="@((KeyboardEventArgs e) => HandleKeyDown(e))"
                                                              AutoFocus="true" />
                                            }
                                            else
                                            {
                                                <MudText Typo="Typo.body1" 
                                                         Style="cursor: pointer; min-width: 60px;"
                                                         @onclick="@(async () => await StartEditingAsync(item))">
                                                    x @item.UnitPrice.ToString("F2")
                                                    @if (item.UnitPrice != referencePrice)
                                                    {
                                                        <MudIcon Icon="@Icons.Material.Filled.Edit" 
                                                                 Size="Size.Small" 
                                                                 Color="Color.Warning" 
                                                                 Style="vertical-align: middle; font-size: 14px;" />
                                                    }
                                                </MudText>
                                            }
                                            @if (item.UnitPrice != referencePrice && editingItem != item)
                                            {
                                                <MudIconButton Icon="@Icons.Material.Filled.Refresh"
                                                               Size="Size.Small"
                                                               Color="Color.Default"
                                                               OnClick="@(() => ResetItemPrice(item))" />
                                            }
                                        </div>
                                        <MudText Typo="Typo.body2" Color="Color.Success" Class="font-weight-bold cart-item-subtotal">
                                            <span class="cart-amount">@item.Subtotal.ToString("F2")</span>
                                            <span class="cart-currency">LD</span>
                                        </MudText>
                                    </div>
                                    <MudIconButton Icon="@Icons.Material.Filled.Close" 
                                                   Size="Size.Small" 
                                                   Color="Color.Error"
                                                   OnClick="@(() => RemoveFromCart(item))" />
                                </div>
                            </div>
                        </MudPaper>
                    }
                </div>

                <MudDivider Class="my-4" />
                
                <MudTextField @bind-Value="customerName" 
                              Label="Customer Name (Optional)" 
                              Variant="Variant.Outlined" 
                              Margin="Margin.Dense"
                              Class="mb-2" />
                <MudTextField @bind-Value="employeeName" 
                              Label="Employee Name" 
                              Variant="Variant.Outlined" 
                              Margin="Margin.Dense"
                              Required="true"
                              Class="mb-3" />

                <MudSelect T="string" Label="Payment Status" @bind-Value="paymentStatus" Variant="Variant.Outlined" Margin="Margin.Dense" Class="mb-2">
                    <MudSelectItem Value="@("Paid")">Paid Now</MudSelectItem>
                    <MudSelectItem Value="@("Unpaid")">Pay Later (Credit)</MudSelectItem>
                </MudSelect>

                @if (paymentStatus == "Paid")
                {
                    <MudGrid Spacing="1">
                        <MudItem xs="6">
                            <MudSelect T="string" Label="Method" @bind-Value="paymentMethod" Variant="Variant.Outlined" Margin="Margin.Dense">
                                <MudSelectItem Value="@("Cash")">Cash</MudSelectItem>
                                <MudSelectItem Value="@("Card")">Card</MudSelectItem>
                                <MudSelectItem Value="@("Transfer")">Transfer</MudSelectItem>
                            </MudSelect>
                        </MudItem>
                        <MudItem xs="6">
                            <MudNumericField @bind-Value="amountPaid" Label="Amount" Variant="Variant.Outlined" Margin="Margin.Dense" Min="0" />
                        </MudItem>
                    </MudGrid>
                }
                
                <div class="d-flex justify-space-between align-center mb-4 pa-3" 
                     style="background-color: var(--mud-palette-background-grey); border-radius: 8px;">
                    <MudText Typo="Typo.h6">Total:</MudText>
                    <MudText Typo="Typo.h5" Color="Color.Primary" Class="font-weight-bold cart-total-display">
                        <span class="cart-amount">@CalculateTotal().ToString("F2")</span>
                        <span class="cart-currency">LD</span>
                    </MudText>
                </div>

                <MudButton Variant="Variant.Filled" 
                           Color="Color.Success" 
                           FullWidth="true"
                           Size="Size.Large"
                           StartIcon="@Icons.Material.Filled.Payment"
                           OnClick="CompleteCheckout"
                           Disabled="@(string.IsNullOrWhiteSpace(employeeName) || isProcessing)">
                    @(isProcessing ? "Processing..." : "Complete Sale")
                </MudButton>

                <MudButton Variant="Variant.Text" 
                           Color="Color.Error" 
                           FullWidth="true"
                           Class="mt-2"
                           StartIcon="@Icons.Material.Filled.Clear"
                           OnClick="ClearCart"
                           Disabled="@isProcessing">
                    Clear Cart
                </MudButton>
            }
        </MudPaper>
    </MudItem>
</MudGrid>

@code {

    private List<Product>? products;
    private List<TransactionItem> cartItems = new();
    private string searchString = "";
    private string customerName = "";
    private string employeeName = "";
    private bool isProcessing = false;
    private TransactionItem? editingItem = null;
    private string editingPriceValue = "";
    private MudTextField<string>? priceInputRef;

    private string paymentStatus = "Paid";
    private string paymentMethod = "Cash";
    private decimal amountPaid;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
        
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        var query = uri.Query;
        if (!string.IsNullOrEmpty(query) && query.Contains("scan="))
        {
            // Simple manual parsing to avoid adding dependencies
            var scanIndex = query.IndexOf("scan=") + 5;
            var scanCode = query.Substring(scanIndex);
            var ampersandIndex = scanCode.IndexOf('&');
            if (ampersandIndex > 0)
            {
                scanCode = scanCode.Substring(0, ampersandIndex);
            }
            
            searchString = Uri.UnescapeDataString(scanCode);
            Snackbar.Add($"Scanned: {searchString}", Severity.Success);
            NavigationManager.NavigateTo("/", replace: true);
        }
    }

    private async Task LoadProducts()
    {
        try
        {
            products = await Http.GetFromJsonAsync<List<Product>>("api/products");
        }
        catch (Exception)
        {
            // Snackbar.Add($"Error loading products: {ex.Message}", Severity.Error);
        }
    }

    /// <summary>
    /// Calculates the available stock for a product by subtracting the quantity already in the cart.
    /// This provides instant UI feedback without modifying the database.
    /// </summary>
    private int GetAvailableStock(Product product)
    {
        var quantityInCart = cartItems
            .Where(i => i.ProductId == product.Id)
            .Sum(i => i.Quantity);
        
        return product.StockQuantity - quantityInCart;
    }

    private void AddToCart(Product product)
    {
        var availableStock = GetAvailableStock(product);
        
        if (availableStock == 0)
        {
            // Snackbar.Add($"{product.Name} is out of stock", Severity.Warning);
            return;
        }

        var existingItem = cartItems.FirstOrDefault(i => i.ProductId == product.Id);

        if (existingItem != null)
        {
            if (availableStock > 0)
            {
                existingItem.Quantity++;
                existingItem.Subtotal = existingItem.Quantity * existingItem.UnitPrice;
                // Snackbar.Add($"{product.Name} quantity increased", Severity.Success);
            }
            else
            {
                // Snackbar.Add("Cannot exceed available stock", Severity.Warning);
            }
        }
        else
        {
            cartItems.Add(new TransactionItem
            {
                ProductId = product.Id,
                Product = product,
                Quantity = 1,
                UnitPrice = product.Price,
                Subtotal = product.Price
            });

            // Snackbar.Add($"{product.Name} added to cart", Severity.Success);
        }
    }

    private void AddSeparateLineToCart(Product product)
    {
        var availableStock = GetAvailableStock(product);
        
        if (availableStock == 0)
        {
            // Snackbar.Add($"{product.Name} is out of stock", Severity.Warning);
            return;
        }

        cartItems.Add(new TransactionItem
        {
            ProductId = product.Id,
            Product = product,
            Quantity = 1,
            UnitPrice = product.Price,
            Subtotal = product.Price
        });

        // Snackbar.Add($"{product.Name} added as new line", Severity.Success);
    }

    private void IncreaseQuantity(TransactionItem item)
    {
        var availableStock = GetAvailableStock(item.Product!);
        
        if (availableStock > 0)
        {
            item.Quantity++;
            item.Subtotal = item.Quantity * item.UnitPrice;
        }
        else
        {
            // Snackbar.Add("Cannot exceed available stock", Severity.Warning);
        }
    }

    private void DecreaseQuantity(TransactionItem item)
    {
        if (item.Quantity > 1)
        {
            item.Quantity--;
            item.Subtotal = item.Quantity * item.UnitPrice;
        }
        else
        {
            RemoveFromCart(item);
        }
    }

    private void UpdateItemPrice(TransactionItem item, decimal newPrice)
    {
        if (newPrice >= 0)
        {
            item.UnitPrice = newPrice;
            item.Subtotal = item.Quantity * item.UnitPrice;
        }
    }

    private async Task StartEditingAsync(TransactionItem item)
    {
        editingItem = item;
        editingPriceValue = item.UnitPrice.ToString("F2");
        
        // Wait a tick for the input to render, then select all text
        await Task.Delay(50);
        if (priceInputRef != null)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("eval", 
                    @"setTimeout(() => { 
                        const input = document.activeElement; 
                        if (input && input.tagName === 'INPUT') { 
                            input.select(); 
                        }
                    }, 10);");
            }
            catch
            {
                // Ignore if JS fails
            }
        }
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            FinishEditing();
        }
    }

    private void OnPriceValueChanged(TransactionItem item, string value)
    {
        // Only allow numbers and one decimal point
        if (string.IsNullOrEmpty(value))
        {
            editingPriceValue = "";
            return;
        }

        // Validate: only digits and at most one decimal point
        var validChars = value.Where(c => char.IsDigit(c) || c == '.').ToArray();
        var dotCount = validChars.Count(c => c == '.');
        
        if (dotCount <= 1)
        {
            editingPriceValue = new string(validChars);
            
            // Try to parse and update the price
            if (decimal.TryParse(editingPriceValue, out decimal newPrice) && newPrice >= 0)
            {
                item.UnitPrice = newPrice;
                item.Subtotal = item.Quantity * item.UnitPrice;
            }
        }
    }

    private void FinishEditing()
    {
        editingItem = null;
        editingPriceValue = "";
    }

    private void ResetItemPrice(TransactionItem item)
    {
        item.UnitPrice = item.Product!.Price;
        item.Subtotal = item.Quantity * item.UnitPrice;
    }

    private void RemoveFromCart(TransactionItem item)
    {
        cartItems.Remove(item);
        // Snackbar.Add("Item removed from cart", Severity.Info);
    }

    private void ClearCart()
    {
        cartItems.Clear();
        customerName = "";
        // Snackbar.Add("Cart cleared", Severity.Info);
    }

    private decimal CalculateTotal()
    {
        return cartItems.Sum(i => i.Subtotal);
    }

    private async Task CompleteCheckout()
    {
        if (!cartItems.Any())
        {
            // Snackbar.Add("Cart is empty", Severity.Warning);
            return;
        }

        if (string.IsNullOrWhiteSpace(employeeName))
        {
            // Snackbar.Add("Employee name is required", Severity.Warning);
            return;
        }

        isProcessing = true;

        try
        {
            var transaction = new Transaction
            {
                CustomerName = string.IsNullOrWhiteSpace(customerName) ? null : customerName,
                EmployeeName = employeeName,
                Items = cartItems.Select(ci => new TransactionItem
                {
                    ProductId = ci.ProductId,
                    Quantity = ci.Quantity,
                    UnitPrice = ci.UnitPrice,
                    Subtotal = ci.Subtotal,
                    // Don't include Product or Transaction navigation properties
                    Product = null,
                    Transaction = null
                }).ToList()
            };

            var response = await Http.PostAsJsonAsync("api/transactions", transaction);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<JsonElement>();
                var transactionId = result.GetProperty("id").GetInt32();
                var total = CalculateTotal();

                if (paymentStatus == "Paid")
                {
                    var payment = new Payment
                    {
                        PaymentDate = DateTime.UtcNow,
                        Amount = amountPaid > 0 ? amountPaid : total, // Use entered amount or full total
                        PaymentMethod = paymentMethod,
                        CustomerName = customerName,
                        Allocations = new List<PaymentAllocation>
                        {
                            new PaymentAllocation
                            {
                                TransactionId = transactionId,
                                Amount = amountPaid > 0 ? amountPaid : total
                            }
                        }
                    };
                    
                    await Http.PostAsJsonAsync("api/payments", payment);
                }

                // Snackbar.Add($"Sale completed! Total: LD {total:F2}", Severity.Success);
                ClearCart();
                employeeName = "";
                paymentStatus = "Paid"; // Reset defaults
                paymentMethod = "Cash";
                amountPaid = 0;
                await LoadProducts(); // Refresh product stock from database
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                // Snackbar.Add($"Failed to complete sale: {errorContent}", Severity.Error);
            }
        }
        catch (Exception)
        {
            // Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            isProcessing = false;
        }
    }

    private void OnQuantityInputChanged(TransactionItem item, int? newQuantity)
    {
        if (newQuantity is null)
        {
            return;
        }

        var maxQuantity = GetMaxQuantity(item);
        var normalized = Math.Clamp(newQuantity.Value, 1, maxQuantity);
        item.Quantity = normalized;
        item.Subtotal = item.Quantity * item.UnitPrice;
    }

    private int GetMaxQuantity(TransactionItem item)
    {
        var product = item.Product;
        if (product is null)
        {
            return item.Quantity;
        }

        var totalForProduct = cartItems
            .Where(i => i.ProductId == item.ProductId)
            .Sum(i => i.Quantity);

        var otherQuantity = totalForProduct - item.Quantity;
        var max = product.StockQuantity - otherQuantity;
        return max > 0 ? max : item.Quantity;
    }

    private string GetProductImage(Product? product)
    {
        if (product is null || string.IsNullOrWhiteSpace(product.ImageUrl))
        {
            return "images/placeholder-product.svg";
        }

        return product.ImageUrl;
    }
}
