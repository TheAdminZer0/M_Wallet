@page "/"
@using M_Wallet.Client.Components
@using System.Text.Json
@using M_Wallet.Client.Services
@using M_Wallet.Shared
@using M_Wallet.Shared.Models
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime
@inject IDialogService DialogService
@inject NavigationManager NavigationManager
@inject ReceiptService _receiptService
@inject CustomAuthenticationStateProvider AuthStateProvider

<PageTitle>POS - Point of Sale</PageTitle>

<MudOverlay Visible="showSuccessOverlay" DarkBackground="true" Absolute="false" ZIndex="2000" OnClick="@(() => showSuccessOverlay = false)">
    <MudCard Class="pa-8 d-flex flex-column align-center justify-center gap-4" Style="width: 400px; max-width: 90vw; position: relative;">
        <MudIconButton Icon="@Icons.Material.Filled.Close" 
                       OnClick="@(() => showSuccessOverlay = false)" 
                       Color="Color.Default" 
                       Size="Size.Small" 
                       Style="position: absolute; top: 8px; right: 8px;" />

        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Style="font-size: 5rem;" />
        <MudText Typo="Typo.h4" Color="Color.Success" Align="Align.Center"><b>Sale Complete!</b></MudText>
        
        <div class="d-flex flex-column align-center my-4">
            <MudText Typo="Typo.h3"><b>LD @(lastSuccessfulTransaction?.TotalAmount.ToString("F2") ?? "0.00")</b></MudText>
            <MudText Typo="Typo.caption">Total Amount</MudText>
        </div>

        <MudDivider Class="w-100 my-2" />

        <div class="w-100 px-4">
            <div class="d-flex justify-space-between mb-1">
                <MudText Typo="Typo.body2" Color="Color.Secondary">Date:</MudText>
                <MudText Typo="Typo.body2">@lastSuccessfulTransaction?.TransactionDate.ToLocalTime().ToString("g")</MudText>
            </div>
            <div class="d-flex justify-space-between mb-1">
                <MudText Typo="Typo.body2" Color="Color.Secondary">Employee:</MudText>
                <MudText Typo="Typo.body2">@lastSuccessfulTransaction?.EmployeeName</MudText>
            </div>
            @if (!string.IsNullOrEmpty(lastSuccessfulTransaction?.CustomerName))
            {
                <div class="d-flex justify-space-between mb-1">
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Customer:</MudText>
                    <MudText Typo="Typo.body2">@lastSuccessfulTransaction?.CustomerName</MudText>
                </div>
            }
            <div class="d-flex justify-space-between mb-1">
                <MudText Typo="Typo.body2" Color="Color.Secondary">Payment:</MudText>
                <MudText Typo="Typo.body2">@lastPaymentMethod</MudText>
            </div>
        </div>

        @if (lastTransactionPaidAmount > (lastSuccessfulTransaction?.TotalAmount ?? 0))
        {
            <MudDivider Class="w-100 my-2" />
            <div class="d-flex justify-space-between w-100 px-4">
                <MudText>Paid:</MudText>
                <MudText><b>LD @lastTransactionPaidAmount.ToString("F2")</b></MudText>
            </div>
            <div class="d-flex justify-space-between w-100 px-4">
                <MudText Color="Color.Success"><b>Change:</b></MudText>
                <MudText Color="Color.Success"><b>LD @((lastTransactionPaidAmount - (lastSuccessfulTransaction?.TotalAmount ?? 0)).ToString("F2"))</b></MudText>
            </div>
        }
    </MudCard>
</MudOverlay>

<MudGrid Spacing="2">
    <!-- Main Product Area -->
    <MudItem xs="12" md="8">
        <ProductBrowser Products="@products" 
                        OnProductClicked="@AddToCart"
                        OnSplitClicked="@AddSeparateLineToCart"
                        GetAvailableStock="@GetAvailableStock"
                        @bind-SearchString="searchString">
        </ProductBrowser>
    </MudItem>

    <!-- Checkout Sidebar -->
    <MudItem xs="12" md="4">
       
        <MudPaper Class="pa-4" Elevation="2" Style="position: sticky; top: 16px; background-color:var(--mud-palette-gray-lighter);">
            <MudText Typo="Typo.h5" Class="mb-4">
                <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Class="mr-2" />
                Cart
            </MudText>
            
            @if (!cartItems.Any())
            {
                <MudAlert Severity="Severity.Info" Class="my-4">
                    Cart is empty.<br/>Tap items to add.
                </MudAlert>
            }
            else
            {
                <div style="max-height: 400px; overflow-y: auto;" class="mb-4">
                    @foreach (var item in cartItems)
                    {
                        var availableStock = GetAvailableStock(item.Product!);
                        var referencePrice = item.Product?.Price ?? item.UnitPrice;
                        <MudPaper Class="cart-item-card pa-2 mb-2" Elevation="2">
                            <div class="cart-item-line">
                                <div class="cart-item-info">
                                    <img src="@GetProductImage(item.Product)"
                                         alt="@item.Product?.Name"
                                         class="cart-item-image"
                                         loading="lazy" />
                                    <MudText Typo="Typo.body1" Class="font-weight-bold">
                                        @item.Product?.Name
                                    </MudText>
                                </div>
                                <div class="cart-item-right">
                                    <div class="cart-quantity-editor">
                                        <MudIconButton Icon="@Icons.Material.Filled.Remove" 
                                                       Size="Size.Small" 
                                                       Color="Color.Default"
                                                       OnClick="@(() => DecreaseQuantity(item))" />
                                        <MudNumericField T="int?"
                                                         Value="item.Quantity"
                                                         ValueChanged="@(val => OnQuantityInputChanged(item, val))"
                                                         ValueExpression="() => item.Quantity"
                                                         Min="1"
                                                         Max="@GetMaxQuantity(item)"
                                                         Immediate="true"
                                                         HideSpinButtons="true"
                                                         Dense="true"
                                                         Class="cart-qty-input" />
                                        <MudIconButton Icon="@Icons.Material.Filled.Add" 
                                                       Size="Size.Small" 
                                                       Color="Color.Default"
                                                       OnClick="@(() => IncreaseQuantity(item))"
                                                       Disabled="@(availableStock == 0)" />
                                    </div>
                                    <div class="cart-price-total">
                                        <div class="cart-price-edit">
                                            @if (editingItem == item)
                                            {
                                                <MudTextField @ref="priceInputRef"
                                                              Value="@editingPriceValue"
                                                              Margin="Margin.Dense"
                                                              Variant="Variant.Text"
                                                              Style="width: 80px;"
                                                              Immediate="true"
                                                              ValueChanged="@((string val) => OnPriceValueChanged(item, val))"
                                                              InputType="InputType.Text"
                                                              OnBlur="@(() => FinishEditing())"
                                                              @onkeydown="@((KeyboardEventArgs e) => HandleKeyDown(e))"
                                                              AutoFocus="true" />
                                            }
                                            else
                                            {
                                                <MudText Typo="Typo.body1" 
                                                         Style="cursor: pointer; min-width: 60px;"
                                                         @onclick="@(async () => await StartEditingAsync(item))">
                                                    x @item.UnitPrice.ToString("F2")
                                                    @if (item.UnitPrice != referencePrice)
                                                    {
                                                        <MudIcon Icon="@Icons.Material.Filled.Edit" 
                                                                 Size="Size.Small" 
                                                                 Color="Color.Warning" 
                                                                 Style="vertical-align: middle; font-size: 14px;" />
                                                    }
                                                </MudText>
                                            }
                                            @if (item.UnitPrice != referencePrice && editingItem != item)
                                            {
                                                <MudIconButton Icon="@Icons.Material.Filled.Refresh"
                                                               Size="Size.Small"
                                                               Color="Color.Default"
                                                               OnClick="@(() => ResetItemPrice(item))" />
                                            }
                                        </div>
                                        <MudText Typo="Typo.body2" Color="Color.Success" Class="font-weight-bold cart-item-subtotal">
                                            <span class="cart-amount">@item.Subtotal.ToString("F2")</span>
                                            <span class="cart-currency">LD</span>
                                        </MudText>
                                    </div>
                                    <MudIconButton Icon="@Icons.Material.Filled.Close" 
                                                   Size="Size.Small" 
                                                   Color="Color.Error"
                                                   OnClick="@(() => RemoveFromCart(item))" />
                                </div>
                            </div>
                        </MudPaper>
                    }
                </div>

                <MudDivider Class="my-4" />
                
                <div class="d-flex justify-end mb-2">
                     <MudButton Variant="Variant.Text" 
                                Size="Size.Small" 
                                Color="@(selectedDate?.Date == DateTime.Today ? Color.Default : Color.Warning)"
                                OnClick="@(() => showDatePicker = !showDatePicker)"
                                StartIcon="@Icons.Material.Filled.CalendarMonth">
                        @(selectedDate?.Date == DateTime.Today ? "Backdate Sale" : $"Date: {selectedDate:MM/dd/yyyy}")
                     </MudButton>
                </div>

                @if (showDatePicker)
                {
                    <MudDatePicker Label="Transaction Date" 
                                   @bind-Date="selectedDate" 
                                   MaxDate="@DateTime.Today"
                                   Variant="Variant.Outlined"
                                   Margin="Margin.Dense"
                                   Class="mb-2"
                                   Adornment="Adornment.End"
                                   AdornmentIcon="@Icons.Material.Filled.Event" />
                }

                <MudAutocomplete T="string"
                                 Label="Customer Name (Optional)"
                                 @bind-Value="customerName"
                                 SearchFunc="@SearchCustomers"
                                 Variant="Variant.Outlined"
                                 Margin="Margin.Dense"
                                 Class="mb-2"
                                 Clearable="true"
                                 CoerceValue="false"
                                 MaxItems="null"
                                 Virtualize="true"
                                 AdornmentIcon="@Icons.Material.Filled.Search" />

                <MudSelect T="string" Label="Payment Status" @bind-Value="paymentStatus" Variant="Variant.Outlined" Margin="Margin.Dense" Class="mb-2">
                    <MudSelectItem Value="@("Paid")">Paid Now</MudSelectItem>
                    <MudSelectItem Value="@("Unpaid")">Pay Later (Credit)</MudSelectItem>
                </MudSelect>

                <div class="d-flex align-center gap-4 mb-2">
                    <MudCheckBox @bind-Value="printReceipt" Label="Print / طباعة" Color="Color.Primary" Dense="true" />
                    @if (printReceipt)
                    {
                        <MudRadioGroup @bind-Value="printFormat" Class="d-flex gap-4">
                            <MudRadio Value="@("A4")" Color="Color.Primary" Dense="true">A4</MudRadio>
                            <MudRadio Value="@("Thermal")" Color="Color.Primary" Dense="true">Thermal</MudRadio>
                        </MudRadioGroup>
                    }
                </div>

                @if (paymentStatus == "Paid")
                {
                    <MudGrid Spacing="1">
                        <MudItem xs="6">
                            <MudSelect T="string" Label="Method" @bind-Value="paymentMethod" Variant="Variant.Outlined" Margin="Margin.Dense">
                                <MudSelectItem Value="@("Cash")">Cash</MudSelectItem>
                                <MudSelectItem Value="@("Card")">Card</MudSelectItem>
                                <MudSelectItem Value="@("Transfer")">Transfer</MudSelectItem>
                            </MudSelect>
                        </MudItem>
                        <MudItem xs="6">
                            <MudNumericField @bind-Value="amountPaid" Label="Amount" Variant="Variant.Outlined" Margin="Margin.Dense" Min="0" />
                        </MudItem>
                    </MudGrid>
                }
                
                <div class="d-flex justify-space-between align-center mb-4 pa-3" 
                     style="background-color: var(--mud-palette-background-grey); border-radius: 8px;">
                    <MudText Typo="Typo.h6">Total:</MudText>
                    <MudText Typo="Typo.h5" Color="Color.Primary" Class="font-weight-bold cart-total-display">
                        <span class="cart-amount">@CalculateTotal().ToString("F2")</span>
                        <span class="cart-currency">LD</span>
                    </MudText>
                </div>

                @if (currentEmployee?.Role == "System")
                {
                     <MudPaper Class="pa-2 mb-3 d-flex flex-column align-center" Elevation="0" Style="background-color: transparent;">
                        <MudText Typo="Typo.caption" Class="mb-1">Enter Pattern to Complete Sale</MudText>
                        <PatternLock @ref="patternLock" OnPatternComplete="VerifyPatternAndComplete" />
                    </MudPaper>
                }
                else
                {
                    <MudButton Variant="Variant.Filled" 
                               Color="Color.Success" 
                               FullWidth="true"
                               Size="Size.Large"
                               StartIcon="@Icons.Material.Filled.Payment"
                               OnClick="@(() => CompleteCheckout(null))"
                               Disabled="@(isProcessing)">
                        @(isProcessing ? "Processing..." : "Complete Sale")
                    </MudButton>
                }

                <MudButton Variant="Variant.Text" 
                           Color="Color.Error" 
                           FullWidth="true"
                           Class="mt-2"
                           StartIcon="@Icons.Material.Filled.Clear"
                           OnClick="ClearCart"
                           Disabled="@isProcessing">
                    Clear Cart
                </MudButton>
            }
        </MudPaper>
    </MudItem>
</MudGrid>

@code {

    private List<Product>? products;
    private List<Person> customers = new();
    private List<TransactionItem> cartItems = new();
    private string searchString = "";
    
    // Success Overlay State
    private bool showSuccessOverlay = false;
    private Transaction? lastSuccessfulTransaction;
    private decimal lastTransactionPaidAmount;
    private string lastPaymentMethod = "";

    private DateTime? selectedDate = DateTime.Today;
    private bool showDatePicker = false;
    private string customerName = "";
    private Person? currentEmployee;
    private bool isProcessing = false;
    private bool printReceipt = false;
    private string printFormat = "A4";
    private TransactionItem? editingItem = null;
    private string editingPriceValue = "";
    private MudTextField<string>? priceInputRef;
    private PatternLock? patternLock;

    private string paymentStatus = "Paid";
    private string paymentMethod = "Cash";
    private decimal amountPaid;

    protected override async Task OnInitializedAsync()
    {
        currentEmployee = await AuthStateProvider.GetCurrentUserAsync();
        if (currentEmployee == null)
        {
             NavigationManager.NavigateTo("/login");
             return;
        }

        await LoadProducts();
        await LoadCustomers();
        
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        var query = uri.Query;
        if (!string.IsNullOrEmpty(query) && query.Contains("scan="))
        {
            // Simple manual parsing to avoid adding dependencies
            var scanIndex = query.IndexOf("scan=") + 5;
            var scanCode = query.Substring(scanIndex);
            var ampersandIndex = scanCode.IndexOf('&');
            if (ampersandIndex > 0)
            {
                scanCode = scanCode.Substring(0, ampersandIndex);
            }
            
            searchString = Uri.UnescapeDataString(scanCode);
            Snackbar.Add($"Scanned: {searchString}", Severity.Success);
            NavigationManager.NavigateTo("/", replace: true);
        }
    }

    private async Task LoadProducts()
    {
        try
        {
            products = await Http.GetFromJsonAsync<List<Product>>("api/products");
        }
        catch (Exception)
        {
            // Snackbar.Add($"Error loading products: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadCustomers()
    {
        try
        {
            customers = await Http.GetFromJsonAsync<List<Person>>("api/people?role=Customer") ?? new();
        }
        catch (Exception)
        {
            // Ignore errors
        }
    }

    private Task<IEnumerable<string>> SearchCustomers(string value, CancellationToken token)
    {
        if (string.IsNullOrEmpty(value))
            return Task.FromResult(customers.Select(x => x.Name));
            
        return Task.FromResult(customers
            .Where(x => x.Name.Contains(value, StringComparison.InvariantCultureIgnoreCase))
            .Select(x => x.Name));
    }

    /// <summary>
    /// Calculates the available stock for a product by subtracting the quantity already in the cart.
    /// This provides instant UI feedback without modifying the database.
    /// </summary>
    private int GetAvailableStock(Product product)
    {
        var quantityInCart = cartItems
            .Where(i => i.ProductId == product.Id)
            .Sum(i => i.Quantity);
        
        return product.StockQuantity - quantityInCart;
    }

    private void AddToCart(Product product)
    {
        var availableStock = GetAvailableStock(product);
        
        if (availableStock == 0)
        {
            // Snackbar.Add($"{product.Name} is out of stock", Severity.Warning);
            return;
        }

        var existingItem = cartItems.FirstOrDefault(i => i.ProductId == product.Id);

        if (existingItem != null)
        {
            if (availableStock > 0)
            {
                existingItem.Quantity++;
                existingItem.Subtotal = existingItem.Quantity * existingItem.UnitPrice;
                // Snackbar.Add($"{product.Name} quantity increased", Severity.Success);
            }
            else
            {
                // Snackbar.Add("Cannot exceed available stock", Severity.Warning);
            }
        }
        else
        {
            cartItems.Add(new TransactionItem
            {
                ProductId = product.Id,
                Product = product,
                Quantity = 1,
                UnitPrice = product.Price,
                Subtotal = product.Price
            });

            // Snackbar.Add($"{product.Name} added to cart", Severity.Success);
        }
    }

    private void AddSeparateLineToCart(Product product)
    {
        var availableStock = GetAvailableStock(product);
        
        if (availableStock == 0)
        {
            // Snackbar.Add($"{product.Name} is out of stock", Severity.Warning);
            return;
        }

        cartItems.Add(new TransactionItem
        {
            ProductId = product.Id,
            Product = product,
            Quantity = 1,
            UnitPrice = product.Price,
            Subtotal = product.Price
        });

        // Snackbar.Add($"{product.Name} added as new line", Severity.Success);
    }

    private void IncreaseQuantity(TransactionItem item)
    {
        var availableStock = GetAvailableStock(item.Product!);
        
        if (availableStock > 0)
        {
            item.Quantity++;
            item.Subtotal = item.Quantity * item.UnitPrice;
        }
        else
        {
            // Snackbar.Add("Cannot exceed available stock", Severity.Warning);
        }
    }

    private void DecreaseQuantity(TransactionItem item)
    {
        if (item.Quantity > 1)
        {
            item.Quantity--;
            item.Subtotal = item.Quantity * item.UnitPrice;
        }
        else
        {
            RemoveFromCart(item);
        }
    }

    private void UpdateItemPrice(TransactionItem item, decimal newPrice)
    {
        if (newPrice >= 0)
        {
            item.UnitPrice = newPrice;
            item.Subtotal = item.Quantity * item.UnitPrice;
        }
    }

    private async Task StartEditingAsync(TransactionItem item)
    {
        editingItem = item;
        editingPriceValue = item.UnitPrice.ToString("F2");
        
        // Wait a tick for the input to render, then select all text
        await Task.Delay(50);
        if (priceInputRef != null)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("eval", 
                    @"setTimeout(() => { 
                        const input = document.activeElement; 
                        if (input && input.tagName === 'INPUT') { 
                            input.select(); 
                        }
                    }, 10);");
            }
            catch
            {
                // Ignore if JS fails
            }
        }
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            FinishEditing();
        }
    }

    private void OnPriceValueChanged(TransactionItem item, string value)
    {
        // Only allow numbers and one decimal point
        if (string.IsNullOrEmpty(value))
        {
            editingPriceValue = "";
            return;
        }

        // Validate: only digits and at most one decimal point
        var validChars = value.Where(c => char.IsDigit(c) || c == '.').ToArray();
        var dotCount = validChars.Count(c => c == '.');
        
        if (dotCount <= 1)
        {
            editingPriceValue = new string(validChars);
            
            // Try to parse and update the price
            if (decimal.TryParse(editingPriceValue, out decimal newPrice) && newPrice >= 0)
            {
                item.UnitPrice = newPrice;
                item.Subtotal = item.Quantity * item.UnitPrice;
            }
        }
    }

    private void FinishEditing()
    {
        editingItem = null;
        editingPriceValue = "";
    }

    private void ResetItemPrice(TransactionItem item)
    {
        item.UnitPrice = item.Product!.Price;
        item.Subtotal = item.Quantity * item.UnitPrice;
    }

    private void RemoveFromCart(TransactionItem item)
    {
        cartItems.Remove(item);
        // Snackbar.Add("Item removed from cart", Severity.Info);
    }

    private void ClearCart()
    {
        cartItems.Clear();
        customerName = "";
        // Snackbar.Add("Cart cleared", Severity.Info);
    }

    private decimal CalculateTotal()
    {
        return cartItems.Sum(i => i.Subtotal);
    }

    private async Task VerifyPatternAndComplete(string pattern)
    {
        try
        {
            var response = await Http.GetAsync($"api/people/verify/{pattern}");
            if (response.IsSuccessStatusCode)
            {
                var employee = await response.Content.ReadFromJsonAsync<Person>();
                await CompleteCheckout(employee);
            }
            else
            {
                if (patternLock != null)
                {
                    await patternLock.ShowError("Invalid Pattern");
                }
                else
                {
                    Snackbar.Add("Invalid passcode pattern", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            if (patternLock != null)
            {
                await patternLock.ShowError("Error verifying");
            }
            else
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task CompleteCheckout(Person? employee = null)
    {
        var transactionEmployee = employee ?? currentEmployee;

        if (!cartItems.Any())
        {
            // Snackbar.Add("Cart is empty", Severity.Warning);
            return;
        }

        if (transactionEmployee == null)
        {
            Snackbar.Add("Employee login required", Severity.Warning);
            return;
        }

        isProcessing = true;

        try
        {
            var transactionDate = selectedDate.HasValue 
                ? selectedDate.Value.Date.Add(DateTime.Now.TimeOfDay).ToUniversalTime()
                : DateTime.UtcNow;

            var transaction = new Transaction
            {
                TransactionDate = transactionDate,
                CustomerName = string.IsNullOrWhiteSpace(customerName) ? null : customerName,
                EmployeeName = transactionEmployee!.Name,
                Items = cartItems.Select(ci => new TransactionItem
                {
                    ProductId = ci.ProductId,
                    Quantity = ci.Quantity,
                    UnitPrice = ci.UnitPrice,
                    Subtotal = ci.Subtotal,
                    // Don't include Product or Transaction navigation properties
                    Product = null,
                    Transaction = null
                }).ToList()
            };

            var response = await Http.PostAsJsonAsync("api/transactions", transaction);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<JsonElement>();
                var transactionId = result.GetProperty("id").GetInt32();
                var total = CalculateTotal();
                var paidAmount = amountPaid > 0 ? amountPaid : total;

                if (paymentStatus == "Paid")
                {
                    var payment = new Payment
                    {
                        PaymentDate = transactionDate,
                        Amount = paidAmount,
                        PaymentMethod = paymentMethod,
                        CustomerName = customerName,
                        EmployeeName = transactionEmployee!.Name,
                        Allocations = new List<PaymentAllocation>
                        {
                            new PaymentAllocation
                            {
                                TransactionId = transactionId,
                                Amount = paidAmount
                            }
                        }
                    };
                    
                    var paymentResponse = await Http.PostAsJsonAsync("api/payments", payment);
                    if (!paymentResponse.IsSuccessStatusCode)
                    {
                        var paymentError = await paymentResponse.Content.ReadAsStringAsync();
                        Snackbar.Add($"Transaction created but payment failed: {paymentError}", Severity.Error);
                    }
                }

                if (printReceipt)
                {
                    var printTransaction = new Transaction
                    {
                        Id = transactionId,
                        TransactionDate = transactionDate,
                        CustomerName = customerName,
                        EmployeeName = transactionEmployee!.Name,
                        TotalAmount = total,
                        Items = cartItems.Select(ci => new TransactionItem
                        {
                            Product = ci.Product,
                            Quantity = ci.Quantity,
                            UnitPrice = ci.UnitPrice,
                            Subtotal = ci.Subtotal
                        }).ToList(),
                        PaymentAllocations = new List<PaymentAllocation> 
                        { 
                            new PaymentAllocation { Amount = paidAmount } 
                        }
                    };

                    string html;
                    if (printFormat == "A4")
                    {
                        html = _receiptService.GenerateInvoiceHtml(printTransaction);
                    }
                    else
                    {
                        html = _receiptService.GenerateReceiptHtml(printTransaction);
                    }
                    await JSRuntime.InvokeVoidAsync("printer.printHtml", html);
                }

                // Show Success Overlay
                lastSuccessfulTransaction = new Transaction 
                { 
                    TotalAmount = total,
                    CustomerName = customerName,
                    EmployeeName = transactionEmployee!.Name,
                    TransactionDate = transactionDate
                };
                lastTransactionPaidAmount = paidAmount;
                lastPaymentMethod = paymentMethod;
                showSuccessOverlay = true;
                StateHasChanged();
                
                // Delay hiding
                await Task.Delay(3000);
                showSuccessOverlay = false;

                // Snackbar.Add($"Sale completed! Total: LD {total:F2}", Severity.Success);
                ClearCart();
                
                paymentStatus = "Paid"; // Reset defaults
                paymentMethod = "Cash";
                amountPaid = 0;
                await LoadProducts(); // Refresh product stock from database
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                // Snackbar.Add($"Failed to complete sale: {errorContent}", Severity.Error);
            }
        }
        catch (Exception)
        {
            // Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            isProcessing = false;
        }
    }

    private void OnQuantityInputChanged(TransactionItem item, int? newQuantity)
    {
        if (newQuantity is null)
        {
            return;
        }

        var maxQuantity = GetMaxQuantity(item);
        var normalized = Math.Clamp(newQuantity.Value, 1, maxQuantity);
        item.Quantity = normalized;
        item.Subtotal = item.Quantity * item.UnitPrice;
    }

    private int GetMaxQuantity(TransactionItem item)
    {
        var product = item.Product;
        if (product is null)
        {
            return item.Quantity;
        }

        var totalForProduct = cartItems
            .Where(i => i.ProductId == item.ProductId)
            .Sum(i => i.Quantity);

        var otherQuantity = totalForProduct - item.Quantity;
        var max = product.StockQuantity - otherQuantity;
        return max > 0 ? max : item.Quantity;
    }

    private string GetProductImage(Product? product)
    {
        if (product is null || string.IsNullOrWhiteSpace(product.ImageUrl))
        {
            return "images/placeholder-product.svg";
        }

        return product.ImageUrl;
    }
