    private void OnPriceValueChanged(TransactionItem item, string value)
    {
        // Only allow numbers and one decimal point
        if (string.IsNullOrEmpty(value))
        {
            editingPriceValue = "";
            return;
        }

        // Validate: only digits and at most one decimal point
        var validChars = value.Where(c => char.IsDigit(c) || c == '.').ToArray();
        var dotCount = validChars.Count(c => c == '.');
        
        if (dotCount <= 1)
        {
            editingPriceValue = new string(validChars);
            
            // Try to parse and update the price
            if (decimal.TryParse(editingPriceValue, out decimal newPrice) && newPrice >= 0)
            {
                item.UnitPrice = newPrice;
                item.Subtotal = item.Quantity * item.UnitPrice;
                UpdateAmountPaid();
            }
        }
    }

    private void OnCostValueChanged(TransactionItem item, string value)
    {
        // Only allow numbers and one decimal point
        if (string.IsNullOrEmpty(value))
        {
            editingCostValue = "";
            return;
        }

        // Validate: only digits and at most one decimal point
        var validChars = value.Where(c => char.IsDigit(c) || c == '.').ToArray();
        var dotCount = validChars.Count(c => c == '.');
        
        if (dotCount <= 1)
        {
            editingCostValue = new string(validChars);
            
            // Try to parse and update the cost
            if (decimal.TryParse(editingCostValue, out decimal newCost) && newCost >= 0)
            {
                item.UnitCost = newCost;
            }
        }
    }

