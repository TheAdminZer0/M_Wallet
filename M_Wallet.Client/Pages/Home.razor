    /// <summary>
    /// Calculates the available stock for a product by subtracting the quantity already in the cart.
    /// This provides instant UI feedback without modifying the database.
    /// </summary>
    private int GetAvailableStock(Product product)
    {
        if (product.IsStockless) return int.MaxValue;

        var quantityInCart = cartItems
            .Where(i => i.ProductId == product.Id)
            .Sum(i => i.Quantity);
        
        return product.StockQuantity - quantityInCart;
    }

    private void AddToCart(Product product)
    {
        var availableStock = GetAvailableStock(product);
        
        if (availableStock == 0)
        {
            return;
        }

        var existingItem = cartItems.FirstOrDefault(i => i.ProductId == product.Id);

        if (existingItem != null)
        {
            if (availableStock > 0)
            {
                existingItem.Quantity++;
                existingItem.Subtotal = existingItem.Quantity * existingItem.UnitPrice;
            }
        }
        else
        {
            cartItems.Add(new TransactionItem
            {
                ProductId = product.Id,
                Product = product,
                Quantity = 1,
                UnitPrice = product.Price,
                UnitCost = product.CostPrice,
                Subtotal = product.Price
            });
        }
        UpdateAmountPaid();
    }

    private void AddSeparateLineToCart(Product product)
    {
        var availableStock = GetAvailableStock(product);
        
        if (availableStock == 0)
        {
            return;
        }

        cartItems.Add(new TransactionItem
        {
            ProductId = product.Id,
            Product = product,
            Quantity = 1,
            UnitPrice = product.Price,
            UnitCost = product.CostPrice,
            Subtotal = product.Price
        });
        UpdateAmountPaid();
    }

    private void IncreaseQuantity(TransactionItem item)
    {
        var availableStock = GetAvailableStock(item.Product!);
        
        if (availableStock > 0)
        {
            item.Quantity++;
            item.Subtotal = item.Quantity * item.UnitPrice;
            UpdateAmountPaid();
        }
    }

    private void DecreaseQuantity(TransactionItem item)
    {
        if (item.Quantity > 1)
        {
            item.Quantity--;
            item.Subtotal = item.Quantity * item.UnitPrice;
            UpdateAmountPaid();
        }
        else
        {
            RemoveFromCart(item);
        }
    }

