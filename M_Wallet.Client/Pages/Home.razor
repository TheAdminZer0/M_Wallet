@code {

    private List<Product>? products;
    private List<TransactionItem> cartItems = new();
    private string searchString = "";
    private string sortBy = "Name";
    private int currentPage = 1;
    private int pageSize = 12;
    private string customerName = "";
    private string employeeName = "";
    private bool isProcessing = false;
    private bool isGridView = true;
    private int? editingItemId = null;
    private string editingPriceValue = "";
    private MudTextField<string>? priceInputRef;
    private IDialogReference? _searchScannerDialog;

    private IEnumerable<Product> PinnedProducts
    {
        get
        {
            if (products is null) return Enumerable.Empty<Product>();
            return products.Where(p => p.IsPinned && p.IsActive);
        }
    }

    private IEnumerable<Product> FilteredProducts
    {
        get
        {
            // Reset to page 1 when search or sort changes
            // Note: This side effect in a getter is not ideal but works for simple binding. 
            // A better approach would be to reset currentPage in the setter of searchString/sortBy.
            
            if (products is null)
            {
                return Enumerable.Empty<Product>();
            }

            var query = products.Where(p => p.IsActive && !p.IsPinned);

            if (!string.IsNullOrWhiteSpace(searchString))
            {
                var term = searchString.Trim();
                query = query.Where(p =>
                    p.Name.Contains(term, System.StringComparison.OrdinalIgnoreCase) ||
                    (p.Description?.Contains(term, System.StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (p.Barcodes?.Any(b => b.Barcode.Contains(term, System.StringComparison.OrdinalIgnoreCase)) ?? false));
            }

            switch (sortBy)
            {
                case "PriceAsc":
                    return query.OrderBy(p => p.Price);
                case "PriceDesc":
                    return query.OrderByDescending(p => p.Price);
                case "MostSold":
                    return query.OrderByDescending(p => p.SoldLast30Days);
                default:
                    return query.OrderBy(p => p.Name);
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        try
        {
            products = await Http.GetFromJsonAsync<List<Product>>("api/products");
        }
        catch (Exception)
        {
            // Snackbar.Add($"Error loading products: {ex.Message}", Severity.Error);
        }
    }

    /// <summary>
    /// Calculates the available stock for a product by subtracting the quantity already in the cart.
    /// This provides instant UI feedback without modifying the database.
    /// </summary>
    private int GetAvailableStock(Product product)
    {
        var quantityInCart = cartItems
            .Where(i => i.ProductId == product.Id)
            .Sum(i => i.Quantity);
        
        return product.StockQuantity - quantityInCart;
    }

    private void AddToCart(Product product)
    {
        var availableStock = GetAvailableStock(product);
        
        if (availableStock == 0)
        {
            // Snackbar.Add($"{product.Name} is out of stock", Severity.Warning);
            return;
        }

        var existingItem = cartItems.FirstOrDefault(i => i.ProductId == product.Id);

        if (existingItem != null)
        {
            if (availableStock > 0)
            {
                existingItem.Quantity++;
                existingItem.Subtotal = existingItem.Quantity * existingItem.UnitPrice;
                // Snackbar.Add($"{product.Name} quantity increased", Severity.Success);
            }
            else
            {
                // Snackbar.Add("Cannot exceed available stock", Severity.Warning);
            }
        }
        else
        {
            cartItems.Add(new TransactionItem
            {
                ProductId = product.Id,
                Product = product,
                Quantity = 1,
                UnitPrice = product.Price,
                Subtotal = product.Price
            });

            // Snackbar.Add($"{product.Name} added to cart", Severity.Success);
        }
    }

    private void IncreaseQuantity(TransactionItem item)
    {
        var availableStock = GetAvailableStock(item.Product!);
        
        if (availableStock > 0)
        {
            item.Quantity++;
            item.Subtotal = item.Quantity * item.UnitPrice;
        }
        else
        {
            // Snackbar.Add("Cannot exceed available stock", Severity.Warning);
        }
    }

    private void DecreaseQuantity(TransactionItem item)
    {
        if (item.Quantity > 1)
        {
            item.Quantity--;
            item.Subtotal = item.Quantity * item.UnitPrice;
        }
        else
        {
            RemoveFromCart(item);
        }
    }

    private void UpdateItemPrice(TransactionItem item, decimal newPrice)
    {
        if (newPrice >= 0)
        {
            item.UnitPrice = newPrice;
            item.Subtotal = item.Quantity * item.UnitPrice;
        }
    }

    private async Task StartEditingAsync(TransactionItem item)
    {
        editingItemId = item.ProductId;
        editingPriceValue = item.UnitPrice.ToString("F2");
        
        // Wait a tick for the input to render, then select all text
        await Task.Delay(50);
        if (priceInputRef != null)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("eval", 
                    @"setTimeout(() => { 
                        const input = document.activeElement; 
                        if (input && input.tagName === 'INPUT') { 
                            input.select(); 
                        }
                    }, 10);");
            }
            catch
            {
                // Ignore if JS fails
            }
        }
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            FinishEditing();
        }
    }

    private void OnPriceValueChanged(TransactionItem item, string value)
    {
        // Only allow numbers and one decimal point
        if (string.IsNullOrEmpty(value))
        {
            editingPriceValue = "";
            return;
        }

        // Validate: only digits and at most one decimal point
        var validChars = value.Where(c => char.IsDigit(c) || c == '.').ToArray();
        var dotCount = validChars.Count(c => c == '.');
        
        if (dotCount <= 1)
        {
            editingPriceValue = new string(validChars);
            
            // Try to parse and update the price
            if (decimal.TryParse(editingPriceValue, out decimal newPrice) && newPrice >= 0)
            {
                item.UnitPrice = newPrice;
                item.Subtotal = item.Quantity * item.UnitPrice;
            }
        }
    }

    private void FinishEditing()
    {
        editingItemId = null;
        editingPriceValue = "";
    }

    private void ResetItemPrice(TransactionItem item)
    {
        item.UnitPrice = item.Product!.Price;
        item.Subtotal = item.Quantity * item.UnitPrice;
    }

    private void RemoveFromCart(TransactionItem item)
    {
        cartItems.Remove(item);
        // Snackbar.Add("Item removed from cart", Severity.Info);
    }

    private void ClearCart()
    {
        cartItems.Clear();
        customerName = "";
        // Snackbar.Add("Cart cleared", Severity.Info);
    }

    private decimal CalculateTotal()
    {
        return cartItems.Sum(i => i.Subtotal);
    }

    private async Task ShowProductDetails(Product product)
    {
        IDialogReference? dialog = null;
        var parameters = new DialogParameters
        { 
            { "Product", product },
            { "OnClose", EventCallback.Factory.Create(this, () => dialog?.Close()) }
        };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        dialog = await DialogService.ShowAsync<M_Wallet.Client.Components.ProductDetailsDialog>("Product Details", parameters, options);
    }

    private async Task OpenSearchScannerAsync()
    {
        var parameters = new DialogParameters<M_Wallet.Client.Components.BarcodeScannerDialog>
        {
            { x => x.OnDetected, EventCallback.Factory.Create<string>(this, HandleSearchBarcodeDetectedAsync) },
            { x => x.OnCancel, EventCallback.Factory.Create(this, CloseSearchScannerAsync) }
        };

        var options = new DialogOptions
        {
            FullScreen = true,
            CloseButton = true
        };

        _searchScannerDialog = await DialogService.ShowAsync<M_Wallet.Client.Components.BarcodeScannerDialog>("Scan Product", parameters, options);
    }

    private async Task HandleSearchBarcodeDetectedAsync(string code)
    {
        if (!string.IsNullOrWhiteSpace(code))
        {
            searchString = code;
            Snackbar.Add($"Searching for barcode {code}", Severity.Info);
        }

        await CloseSearchScannerAsync();
    }

    private Task CloseSearchScannerAsync()
    {
        _searchScannerDialog?.Close();
        _searchScannerDialog = null;
        return Task.CompletedTask;
    }

    private async Task CompleteCheckout()
    {
        if (!cartItems.Any())
        {
            // Snackbar.Add("Cart is empty", Severity.Warning);
            return;
        }

        if (string.IsNullOrWhiteSpace(employeeName))
        {
            // Snackbar.Add("Employee name is required", Severity.Warning);
            return;
        }

        isProcessing = true;

        try
        {
            var transaction = new Transaction
            {
                CustomerName = string.IsNullOrWhiteSpace(customerName) ? null : customerName,
                EmployeeName = employeeName,
                Items = cartItems.Select(ci => new TransactionItem
                {
                    ProductId = ci.ProductId,
                    Quantity = ci.Quantity,
                    UnitPrice = ci.UnitPrice,
                    Subtotal = ci.Subtotal,
                    // Don't include Product or Transaction navigation properties
                    Product = null,
                    Transaction = null
                }).ToList()
            };

            var response = await Http.PostAsJsonAsync("api/transactions", transaction);

            if (response.IsSuccessStatusCode)
            {
                var total = CalculateTotal();
                // Snackbar.Add($"Sale completed! Total: LYD {total:F2}", Severity.Success);
                ClearCart();
                employeeName = "";
                await LoadProducts(); // Refresh product stock from database
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                // Snackbar.Add($"Failed to complete sale: {errorContent}", Severity.Error);
            }
        }
        catch (Exception)
        {
            // Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            isProcessing = false;
        }
    }

