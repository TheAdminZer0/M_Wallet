        discountAmount = val;
        UpdateAmountPaid();
    }

    // =====================================================
    // CHECKOUT: Process Transaction & Payment
    // =====================================================
    private async Task CompleteCheckout(Person? employee = null)
    {
        var transactionEmployee = employee ?? currentEmployee;

        if (!cartItems.Any())
        {
            return;
        }

        if (transactionEmployee == null)
        {
            Snackbar.Add("Employee login required", Severity.Warning);
            return;
        }

        if (isDelivery && selectedDriver == null && string.IsNullOrWhiteSpace(driverName) && string.IsNullOrWhiteSpace(driverPhone))
        {
            Snackbar.Add("Please select or enter a driver for delivery orders", Severity.Warning);
            return;
        }

        isProcessing = true;

        try
        {
            var transactionDate = selectedDate.HasValue 
                ? selectedDate.Value.Date.Add(DateTime.Now.TimeOfDay).ToUniversalTime()
                : DateTime.UtcNow;

            var transaction = new Transaction
            {
                TransactionDate = transactionDate,
                PersonId = selectedCustomer?.Id,
                CustomerName = string.IsNullOrWhiteSpace(customerName) ? null : customerName,
                CustomerPhone = string.IsNullOrWhiteSpace(customerPhone) ? null : customerPhone,
                Note = string.IsNullOrWhiteSpace(orderNote) ? null : orderNote,
                EmployeeName = transactionEmployee!.Name,
                IsDelivery = isDelivery,
                DriverId = isDelivery ? selectedDriver?.Id : null,
                DriverName = isDelivery && string.IsNullOrWhiteSpace(driverName) ? null : driverName,
                DriverPhone = isDelivery && string.IsNullOrWhiteSpace(driverPhone) ? null : driverPhone,
                Discount = applyDiscount ? discountAmount : 0,
                Items = cartItems.Select(ci => new TransactionItem
                {
                    ProductId = ci.ProductId,
                    Quantity = ci.Quantity,
                    UnitPrice = ci.UnitPrice,
                    Subtotal = ci.Subtotal,
                    // Don't include Product or Transaction navigation properties
                    Product = null,
                    Transaction = null
                }).ToList()
            };

            var response = await Http.PostAsJsonAsync("api/transactions", transaction);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<JsonElement>();
                var transactionId = result.GetProperty("id").GetInt32();
                var total = CalculateTotal();
                var paidAmount = amountPaid;

                if (paidAmount > 0)
                {
                    var payment = new Payment
                    {
                        PaymentDate = transactionDate.AddSeconds(1), // Ensure payment comes after transaction
                        Amount = paidAmount,
                        PaymentMethod = paymentMethod,
                        CustomerName = customerName,
                        EmployeeName = transactionEmployee!.Name,
                        Allocations = new List<PaymentAllocation>
                        {
                            new PaymentAllocation
                            {
                                TransactionId = transactionId,
                                Amount = paidAmount
                            }
                        }
                    };
                    
                    var paymentResponse = await Http.PostAsJsonAsync("api/payments", payment);
                    if (!paymentResponse.IsSuccessStatusCode)
                    {
                        var paymentError = await paymentResponse.Content.ReadAsStringAsync();
                        Snackbar.Add($"Transaction created but payment failed: {paymentError}", Severity.Error);
                    }
                }

                if (printReceipt)
                {
                    var printTransaction = new Transaction
                    {
                        Id = transactionId,
                        TransactionDate = transactionDate,
                        CustomerName = customerName,
                        EmployeeName = transactionEmployee!.Name,
                        TotalAmount = total,
                        Discount = applyDiscount ? discountAmount : 0,
                        Items = cartItems.Select(ci => new TransactionItem
                        {
                            Product = ci.Product,
                            Quantity = ci.Quantity,
                            UnitPrice = ci.UnitPrice,
                            Subtotal = ci.Subtotal
                        }).ToList(),
                        PaymentAllocations = new List<PaymentAllocation> 
                        { 
                            new PaymentAllocation { Amount = paidAmount } 
                        }
                    };

                    string html;
                    if (printFormat == "A4")
                    {
                        html = _receiptService.GenerateInvoiceHtml(printTransaction);
                    }
                    else
                    {
                        html = _receiptService.GenerateReceiptHtml(printTransaction);
                    }
                    await JSRuntime.InvokeVoidAsync("printer.printHtml", html);
                }

                // Show Success Overlay
                lastSuccessfulTransaction = new Transaction 
                { 
                    TotalAmount = total,
                    CustomerName = customerName,
                    EmployeeName = transactionEmployee!.Name,
                    TransactionDate = transactionDate
                };
                lastTransactionPaidAmount = paidAmount;
                lastPaymentMethod = paymentMethod;
                showSuccessOverlay = true;
                StateHasChanged();
                
                // Clear immediately to avoid cart reloading when navigating away
                await ClearCartAsync();

                paymentMethod = "Cash";
                amountPaid = 0;
                applyDiscount = false;
                discountAmount = 0;

                // Delay hiding overlay after clearing state
                await Task.Delay(3000);
                showSuccessOverlay = false;

                await ProductService.RefreshDataAsync(); // Refresh product stock
                await LoadProducts(); // Reload products
                await TransactionService.RefreshDataAsync(); // Refresh transactions list
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception)
        {
        }
        finally
        {
            isProcessing = false;
        }
    }

    private void UpdateAmountPaid()
    {
        if (!isDelivery)
        {
            amountPaid = CalculateTotal();
        }
    }

    private void OnQuantityInputChanged(TransactionItem item, int? newQuantity)
    {
        if (newQuantity is null)
        {
            return;
        }

        var maxQuantity = GetMaxQuantity(item);
        var normalized = Math.Clamp(newQuantity.Value, 1, maxQuantity);
        item.Quantity = normalized;
        item.Subtotal = item.Quantity * item.UnitPrice;
        UpdateAmountPaid();
    }

    private int GetMaxQuantity(TransactionItem item)
    {
        var product = item.Product;
        if (product is null)
        {
            return item.Quantity;
        }

        var totalForProduct = cartItems
            .Where(i => i.ProductId == item.ProductId)
            .Sum(i => i.Quantity);

        var otherQuantity = totalForProduct - item.Quantity;
        var max = product.StockQuantity - otherQuantity;
        return max > 0 ? max : item.Quantity;
    }

