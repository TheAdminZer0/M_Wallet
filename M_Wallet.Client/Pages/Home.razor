@page "/"
@using M_Wallet.Client.Components
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime
@inject IDialogService DialogService



<PageTitle>POS - Point of Sale</PageTitle>

<MudGrid Spacing="2">
    <!-- Main Product Area -->
    <MudItem xs="12" md="8">
        <MudPaper Class="pa-4" Elevation="2" Style="background-color:var(--mud-palette-gray-lighter);">
           
                <div class="d-flex align-center gap-2">
                    <MudTextField Value="searchString" 
                                  ValueChanged="@(EventCallback.Factory.Create<string>(this, OnSearchChanged))"
                                  Placeholder="Search products..." 
                                  Adornment="Adornment.Start" 
                                  AdornmentIcon="@Icons.Material.Filled.Search" 
                                  IconSize="Size.Medium" 
                                  Margin="Margin.Dense"
                                  Clearable="true"
                                  Immediate="true"
                                  Style="max-width: 300px;">
                    </MudTextField>
                    <MudIconButton Icon="@Icons.Material.Filled.CenterFocusStrong"
                                   Color="Color.Primary"
                                   Size="Size.Medium"
                                   Title="Scan barcode to search"
                                   OnClick="OpenSearchScannerAsync" />
                    <MudSelect T="string" Value="sortBy" ValueChanged="OnSortChanged" Label="Sort By" Margin="Margin.Dense" Variant="Variant.Outlined" Style="min-width: 150px;">
                        <MudSelectItem Value="@("Name")">Name (A-Z)</MudSelectItem>
                        <MudSelectItem Value="@("PriceAsc")">Price (Low-High)</MudSelectItem>
                        <MudSelectItem Value="@("PriceDesc")">Price (High-Low)</MudSelectItem>
                        <MudSelectItem Value="@("MostSold")">Most Sold (30 Days)</MudSelectItem>
                    </MudSelect>
                    <MudToggleIconButton @bind-Toggled="@isGridView"
                                         Icon="@Icons.Material.Filled.GridView" 
                                         ToggledIcon="@Icons.Material.Filled.TableRows"
                                         Color="@Color.Primary" 
                                         ToggledColor="@Color.Primary"
                                         Title="Toggle Grid/Table View" />
                </div>
           

            @if (products == null)
            {
                <div class="d-flex justify-center pa-8">
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
                </div>
            }
            else if (!products.Any())
            {
                <MudAlert Severity="Severity.Info">No products available</MudAlert>
            }
            else
            {
                @if (PinnedProducts.Any())
                {
                    <MudText Typo="Typo.h6" Class="mb-2">Pinned Products</MudText>
                    <div class="d-flex gap-3 overflow-x-auto py-2 mb-4" style="overflow-x: auto;">
                        @foreach (var product in PinnedProducts)
                        {
                            var availableStock = GetAvailableStock(product);
                            <MudCard Class="cursor-pointer flex-shrink-0" 
                                     Style="width: 200px;" 
                                     Elevation="2"
                                     @onclick="@(() => AddToCart(product))">
                                <div style="position: relative;">
                                    <MudCardMedia Image="@GetProductImage(product)" Height="120" />
                                    <div @onclick:stopPropagation="true" style="position: absolute; top: 5px; right: 5px; z-index: 10;">
                                        <MudIconButton Icon="@Icons.Material.Filled.Info" 
                                                       Color="Color.Default" 
                                                       Size="Size.Small"
                                                       Variant="Variant.Filled"
                                                       OnClick="@((e) => ShowProductDetails(product))" />
                                    </div>
                                </div>
                                <MudCardContent Class="pa-2">
                                    <MudText Typo="Typo.body1" Class="font-weight-bold" Style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        @product.Name
                                    </MudText>
                                    <div class="d-flex justify-space-between align-center mt-1">
                                        <MudText Typo="Typo.h6" Color="Color.Success">
                                            @product.Price.ToString("F2")
                                        </MudText>
                                        <MudText Typo="Typo.body1" Color="@(availableStock > 10 ? Color.Default : Color.Error)">
                                            Stock: @availableStock
                                        </MudText>
                                    </div>
                                </MudCardContent>
                            </MudCard>
                        }
                    </div>
                    <MudDivider Class="mb-4"/>
                }

                @if (isGridView)
                {
                    <!-- Grid View -->
                    <div class="d-flex flex-wrap gap-4 justify-center justify-sm-start">
                        @foreach (var product in FilteredProducts.Skip((currentPage - 1) * pageSize).Take(pageSize))
                        {
                            var availableStock = GetAvailableStock(product);
                            <MudCard Class="cursor-pointer flex-shrink-0" 
                                     Elevation="2"
                                     Style="width: 200px;"
                                     @onclick="@(() => AddToCart(product))">
                                <div style="position: relative;">
                                    <MudCardMedia Image="@GetProductImage(product)" Height="120"/>
                                    <div @onclick:stopPropagation="true" style="position: absolute; top: 5px; right: 5px; z-index: 10;">
                                        <MudIconButton Icon="@Icons.Material.Filled.Info" 
                                                       Color="Color.Default" 
                                                       Size="Size.Small"
                                                       Variant="Variant.Filled"
                                                       OnClick="@((e) => ShowProductDetails(product))" />
                                    </div>
                                </div>
                                <MudCardContent Class="pa-2">
                                    <MudText Typo="Typo.body1" Class="font-weight-bold" Style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                        @product.Name
                                    </MudText>
                                    <div class="d-flex justify-space-between align-center">
                                        <MudText Typo="Typo.h6" Color="Color.Success">
                                            @product.Price.ToString("F2")
                                        </MudText>
                                        <MudText Typo="Typo.body1" Color="@(availableStock > 10 ? Color.Default : Color.Error)">
                                            Stock: @availableStock
                                        </MudText>
                                    </div>
                                </MudCardContent>
                            </MudCard>
                        }
                    </div>
                    <div class="d-flex justify-center mt-4">
                        <MudPagination Count="@((FilteredProducts.Count() + pageSize - 1) / pageSize)" SelectedChanged="OnPageChanged" Selected="@currentPage" />
                    </div>
                }
                else
                {
                    <!-- Table View -->
                    <div style="overflow-x:auto; -webkit-overflow-scrolling: touch;">
                        <MudTable Items="@FilteredProducts" 
                                  Hover="true" 
                                  Dense="true" 
                                  Breakpoint="Breakpoint.None"
                                  OnRowClick="@((TableRowClickEventArgs<Product> args) => AddToCart(args.Item!))">
                            <HeaderContent>
                                <MudTh>Name</MudTh>
                                <MudTh>Price</MudTh>
                                <MudTh>Stock</MudTh>
                                <MudTh>Action</MudTh>
                            </HeaderContent>
                            <RowTemplate>
                                @{
                                    var availableStock = GetAvailableStock(context);
                                }
                                <MudTd DataLabel="Name">@context.Name</MudTd>
                                <MudTd DataLabel="Price">LYD @context.Price.ToString("F2")</MudTd>
                                <MudTd DataLabel="Stock">
                                    <MudChip T="string" Size="Size.Small" Color="@(availableStock > 10 ? Color.Success : Color.Warning)">
                                        @availableStock
                                    </MudChip>
                                </MudTd>
                                <MudTd DataLabel="Action">
                                    <div @onclick:stopPropagation="true" class="d-inline-flex align-center">
                                        <MudIconButton Icon="@Icons.Material.Filled.Info" 
                                                       Color="Color.Default" 
                                                       Size="Size.Small" 
                                                       OnClick="@((e) => ShowProductDetails(context))"
                                                       Class="mr-2" />
                                        <MudButton Size="Size.Small" 
                                                   Variant="Variant.Filled" 
                                                   Color="Color.Primary"
                                                   OnClick="@(() => AddToCart(context))"
                                                   Disabled="@(availableStock == 0)">
                                            Add
                                        </MudButton>
                                    </div>
                                </MudTd>
                            </RowTemplate>
                            <PagerContent>
                                <MudTablePager />
                            </PagerContent>
                        </MudTable>
                    </div>
                }
            }
        </MudPaper>
    </MudItem>

    <!-- Checkout Sidebar -->
    <MudItem xs="12" md="4">
       
        <MudPaper Class="pa-4" Elevation="2" Style="position: sticky; top: 16px; background-color:var(--mud-palette-gray-lighter);">
            <MudText Typo="Typo.h5" Class="mb-4">
                <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Class="mr-2" />
                Cart
            </MudText>
            
            @if (!cartItems.Any())
            {
                <MudAlert Severity="Severity.Info" Class="my-4">
                    Cart is empty.<br/>Tap items to add.
                </MudAlert>
            }
            else
            {
                <div style="max-height: 400px; overflow-y: auto;" class="mb-4">
                    @foreach (var item in cartItems)
                    {
                        var availableStock = GetAvailableStock(item.Product!);
                        var referencePrice = item.Product?.Price ?? item.UnitPrice;
                        <MudPaper Class="cart-item-card pa-2 mb-2" Elevation="2">
                            <div class="cart-item-line">
                                <div class="cart-item-info">
                                    <img src="@GetProductImage(item.Product)"
                                         alt="@item.Product?.Name"
                                         class="cart-item-image"
                                         loading="lazy" />
                                    <MudText Typo="Typo.body1" Class="font-weight-bold">
                                        @item.Product?.Name
                                    </MudText>
                                </div>
                                <div class="cart-item-right">
                                    <div class="cart-quantity-editor">
                                        <MudIconButton Icon="@Icons.Material.Filled.Remove" 
                                                       Size="Size.Small" 
                                                       Color="Color.Default"
                                                       OnClick="@(() => DecreaseQuantity(item))" />
                                        <MudNumericField T="int?"
                                                         Value="item.Quantity"
                                                         ValueChanged="@(val => OnQuantityInputChanged(item, val))"
                                                         ValueExpression="() => item.Quantity"
                                                         Min="1"
                                                         Max="@GetMaxQuantity(item)"
                                                         Immediate="true"
                                                         HideSpinButtons="true"
                                                         Dense="true"
                                                         Class="cart-qty-input" />
                                        <MudIconButton Icon="@Icons.Material.Filled.Add" 
                                                       Size="Size.Small" 
                                                       Color="Color.Default"
                                                       OnClick="@(() => IncreaseQuantity(item))"
                                                       Disabled="@(availableStock == 0)" />
                                    </div>
                                    <div class="cart-price-total">
                                        <div class="cart-price-edit">
                                            @if (editingItemId == item.ProductId)
                                            {
                                                <MudTextField @ref="priceInputRef"
                                                              Value="@editingPriceValue"
                                                              Margin="Margin.Dense"
                                                              Variant="Variant.Text"
                                                              Style="width: 80px;"
                                                              Immediate="true"
                                                              ValueChanged="@((string val) => OnPriceValueChanged(item, val))"
                                                              InputType="InputType.Text"
                                                              OnBlur="@(() => FinishEditing())"
                                                              @onkeydown="@((KeyboardEventArgs e) => HandleKeyDown(e))"
                                                              AutoFocus="true" />
                                            }
                                            else
                                            {
                                                <MudText Typo="Typo.body1" 
                                                         Style="cursor: pointer; min-width: 60px;"
                                                         @onclick="@(async () => await StartEditingAsync(item))">
                                                    x @item.UnitPrice.ToString("F2")
                                                    @if (item.UnitPrice != referencePrice)
                                                    {
                                                        <MudIcon Icon="@Icons.Material.Filled.Edit" 
                                                                 Size="Size.Small" 
                                                                 Color="Color.Warning" 
                                                                 Style="vertical-align: middle; font-size: 14px;" />
                                                    }
                                                </MudText>
                                            }
                                            @if (item.UnitPrice != referencePrice && editingItemId != item.ProductId)
                                            {
                                                <MudIconButton Icon="@Icons.Material.Filled.Refresh"
                                                               Size="Size.Small"
                                                               Color="Color.Default"
                                                               OnClick="@(() => ResetItemPrice(item))" />
                                            }
                                        </div>
                                        <MudText Typo="Typo.body2" Color="Color.Success" Class="font-weight-bold cart-item-subtotal">
                                            <span class="cart-amount">@item.Subtotal.ToString("F2")</span>
                                            <span class="cart-currency">LYD</span>
                                        </MudText>
                                    </div>
                                    <MudIconButton Icon="@Icons.Material.Filled.Close" 
                                                   Size="Size.Small" 
                                                   Color="Color.Error"
                                                   OnClick="@(() => RemoveFromCart(item))" />
                                </div>
                            </div>
                        </MudPaper>
                    }
                </div>

                <MudDivider Class="my-4" />
                
                <MudTextField @bind-Value="customerName" 
                              Label="Customer Name (Optional)" 
                              Variant="Variant.Outlined" 
                              Margin="Margin.Dense"
                              Class="mb-2" />
                <MudTextField @bind-Value="employeeName" 
                              Label="Employee Name" 
                              Variant="Variant.Outlined" 
                              Margin="Margin.Dense"
                              Required="true"
                              Class="mb-3" />

                
                <div class="d-flex justify-space-between align-center mb-4 pa-3" 
                     style="background-color: var(--mud-palette-background-grey); border-radius: 8px;">
                    <MudText Typo="Typo.h6">Total:</MudText>
                    <MudText Typo="Typo.h5" Color="Color.Primary" Class="font-weight-bold cart-total-display">
                        <span class="cart-amount">@CalculateTotal().ToString("F2")</span>
                        <span class="cart-currency">LYD</span>
                    </MudText>
                </div>

                <MudButton Variant="Variant.Filled" 
                           Color="Color.Success" 
                           FullWidth="true"
                           Size="Size.Large"
                           StartIcon="@Icons.Material.Filled.Payment"
                           OnClick="CompleteCheckout"
                           Disabled="@(string.IsNullOrWhiteSpace(employeeName) || isProcessing)">
                    @(isProcessing ? "Processing..." : "Complete Sale")
                </MudButton>

                <MudButton Variant="Variant.Text" 
                           Color="Color.Error" 
                           FullWidth="true"
                           Class="mt-2"
                           StartIcon="@Icons.Material.Filled.Clear"
                           OnClick="ClearCart"
                           Disabled="@isProcessing">
                    Clear Cart
                </MudButton>
            }
        </MudPaper>
    </MudItem>
</MudGrid>

