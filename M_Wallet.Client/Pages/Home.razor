@page "/"
@implements IDisposable
@using M_Wallet.Client.Components
@using System.Text.Json
@using M_Wallet.Client.Services
@using M_Wallet.Shared
@using M_Wallet.Shared.Models
@inject HttpClient Http
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject ReceiptService _receiptService
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject ProductService ProductService
@inject TransactionService TransactionService
@inject CartService CartService

<PageTitle>POS - Point of Sale</PageTitle>

<!-- Success overlay after a completed sale -->
<MudOverlay Visible="showSuccessOverlay" DarkBackground="true" Absolute="false" ZIndex="2000" OnClick="@(() => showSuccessOverlay = false)">
    <MudCard Class="pa-8 d-flex flex-column align-center justify-center gap-4" Style="width: 400px; max-width: 90vw; position: relative;">
        <MudIconButton Icon="@Icons.Material.Filled.Close" 
                       OnClick="@(() => showSuccessOverlay = false)" 
                       Color="Color.Default" 
                       Size="Size.Small" 
                       Style="position: absolute; top: 8px; right: 8px;" />

        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Style="font-size: 5rem;" />
        <MudText Typo="Typo.h4" Color="Color.Success" Align="Align.Center"><b>Sale Complete!</b></MudText>
        
        <div class="d-flex flex-column align-center my-4">
            <MudText Typo="Typo.h3"><b>LD @(lastSuccessfulTransaction?.TotalAmount.ToString("F2") ?? "0.00")</b></MudText>
            <MudText Typo="Typo.caption">Total Amount</MudText>
        </div>

        <MudDivider Class="w-100 my-2" />

        <div class="w-100 px-4">
            <div class="d-flex justify-space-between mb-1">
                <MudText Typo="Typo.body2" Color="Color.Secondary">Date:</MudText>
                <MudText Typo="Typo.body2">@lastSuccessfulTransaction?.TransactionDate.ToDisplayString()</MudText>
            </div>
            <div class="d-flex justify-space-between mb-1">
                <MudText Typo="Typo.body2" Color="Color.Secondary">Employee:</MudText>
                <MudText Typo="Typo.body2">@lastSuccessfulTransaction?.EmployeeName</MudText>
            </div>
            @if (!string.IsNullOrEmpty(lastSuccessfulTransaction?.CustomerName))
            {
                <div class="d-flex justify-space-between mb-1">
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Customer:</MudText>
                    <MudText Typo="Typo.body2">@lastSuccessfulTransaction?.CustomerName</MudText>
                </div>
            }
            <div class="d-flex justify-space-between mb-1">
                <MudText Typo="Typo.body2" Color="Color.Secondary">Payment:</MudText>
                <MudText Typo="Typo.body2">@lastPaymentMethod</MudText>
            </div>
        </div>

        @if (lastTransactionPaidAmount > (lastSuccessfulTransaction?.TotalAmount ?? 0))
        {
            <MudDivider Class="w-100 my-2" />
            <div class="d-flex justify-space-between w-100 px-4">
                <MudText>Paid:</MudText>
                <MudText><b>LD @lastTransactionPaidAmount.ToString("F2")</b></MudText>
            </div>
            <div class="d-flex justify-space-between w-100 px-4">
                <MudText Color="Color.Success"><b>Change:</b></MudText>
                <MudText Color="Color.Success"><b>LD @((lastTransactionPaidAmount - (lastSuccessfulTransaction?.TotalAmount ?? 0)).ToString("F2"))</b></MudText>
            </div>
        }
    </MudCard>
</MudOverlay>

<MudGrid Spacing="2">
    <!-- Main product browser (POS grid) -->
    <MudItem xs="12" md="8">
        <ProductBrowser Products="@products" 
                        OnProductClicked="@AddToCart"
                        OnSplitClicked="@AddSeparateLineToCart"
                        GetAvailableStock="@GetAvailableStock"
                        @bind-SearchString="searchString">
        </ProductBrowser>
    </MudItem>

    <!-- Checkout sidebar: cart + customer/delivery details -->
    <MudItem xs="12" md="4">
       
        <MudPaper Class="pa-4" Elevation="2" Style="position: sticky; top: 16px; background-color:var(--mud-palette-gray-lighter);">
            <MudText Typo="Typo.h5" Class="mb-4">
                <MudIcon Icon="@Icons.Material.Filled.ShoppingCart" Class="mr-2" />
                Cart
            </MudText>
            
            @if (!cartItems.Any())
            {
                <MudAlert Severity="Severity.Info" Class="my-4">
                    Cart is empty.<br/>Tap items to add.
                </MudAlert>
            }
            else
            {
                <div style="max-height: 400px; overflow-y: auto;" class="mb-4">
                    @foreach (var item in cartItems)
                    {
                        var availableStock = GetAvailableStock(item.Product!);
                        var referencePrice = item.Product?.Price ?? item.UnitPrice;
                        <MudPaper Class="cart-item-card pa-2 mb-2" Elevation="2">
                            <div class="cart-item-line">
                                <div class="cart-item-info">
                                    <img src="@GetProductImage(item.Product)"
                                         alt="@item.Product?.Name"
                                         class="cart-item-image"
                                         loading="lazy" />
                                    <MudText Typo="Typo.body1" Class="font-weight-bold">
                                        @item.Product?.Name
                                    </MudText>
                                </div>
                                <div class="cart-item-right">
                                    <div class="cart-quantity-editor">
                                        <MudIconButton Icon="@Icons.Material.Filled.Remove" 
                                                       Size="Size.Small" 
                                                       Color="Color.Default"
                                                       OnClick="@(() => DecreaseQuantity(item))" />
                                        <MudNumericField T="int?"
                                                         Value="item.Quantity"
                                                         ValueChanged="@(val => OnQuantityInputChanged(item, val))"
                                                         ValueExpression="() => item.Quantity"
                                                         Min="1"
                                                         Max="@GetMaxQuantity(item)"
                                                         Immediate="true"
                                                         HideSpinButtons="true"
                                                         Dense="true"
                                                         Class="cart-qty-input" />
                                        <MudIconButton Icon="@Icons.Material.Filled.Add" 
                                                       Size="Size.Small" 
                                                       Color="Color.Default"
                                                       OnClick="@(() => IncreaseQuantity(item))"
                                                       Disabled="@(availableStock == 0)" />
                                    </div>
                                    <div class="cart-price-total">
                                        <div class="cart-price-edit">
                                            @if (editingItem == item)
                                            {
                                                <div class="d-flex flex-column gap-1">
                                                    <MudTextField @ref="priceInputRef"
                                                                  Value="@editingPriceValue"
                                                                  Label="Price"
                                                                  Margin="Margin.Dense"
                                                                  Variant="Variant.Text"
                                                                  Style="width: 80px;"
                                                                  Immediate="true"
                                                                  ValueChanged="@((string val) => OnPriceValueChanged(item, val))"
                                                                  InputType="InputType.Text"
                                                                  @onkeydown="@((KeyboardEventArgs e) => HandleKeyDown(e))"
                                                                  AutoFocus="true" />
                                                    
                                                    @if (item.Product?.IsService == true)
                                                    {
                                                        <MudTextField Value="@editingCostValue"
                                                                      Label="Cost"
                                                                      Margin="Margin.Dense"
                                                                      Variant="Variant.Text"
                                                                      Style="width: 80px;"
                                                                      Immediate="true"
                                                                      ValueChanged="@((string val) => OnCostValueChanged(item, val))"
                                                                      InputType="InputType.Text"
                                                                      @onkeydown="@((KeyboardEventArgs e) => HandleKeyDown(e))" />
                                                    }
                                                                  
                                                    <MudIconButton Icon="@Icons.Material.Filled.Check" 
                                                                   Size="Size.Small" 
                                                                   Color="Color.Success" 
                                                                   OnClick="@FinishEditing" />
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="d-flex flex-column align-end">
                                                    <MudText Typo="Typo.body1" 
                                                             Style="cursor: pointer; min-width: 60px;"
                                                             @onclick="@(async () => await StartEditingAsync(item))">
                                                        x @item.UnitPrice.ToString("F2")
                                                        @if (item.UnitPrice != referencePrice)
                                                        {
                                                            <MudIcon Icon="@Icons.Material.Filled.Edit" 
                                                                     Size="Size.Small" 
                                                                     Color="Color.Warning" 
                                                                     Style="vertical-align: middle; font-size: 14px;" />
                                                        }
                                                    </MudText>
                                                    @if (item.Product?.IsService == true)
                                                    {
                                                        <MudText Typo="Typo.caption" Color="Color.Default" Style="font-size: 0.7rem;">
                                                            (C: @item.UnitCost.ToString("F2"))
                                                        </MudText>
                                                    }
                                                </div>
                                            }
                                            @if (item.UnitPrice != referencePrice && editingItem != item)
                                            {
                                                <MudIconButton Icon="@Icons.Material.Filled.Refresh"
                                                               Size="Size.Small"
                                                               Color="Color.Default"
                                                               OnClick="@(() => ResetItemPrice(item))" />
                                            }
                                        </div>
                                        <MudText Typo="Typo.body2" Color="Color.Success" Class="font-weight-bold cart-item-subtotal">
                                            <span class="cart-amount">@item.Subtotal.ToString("F2")</span>
                                            <span class="cart-currency">LD</span>
                                        </MudText>
                                    </div>
                                    <MudIconButton Icon="@Icons.Material.Filled.Close" 
                                                   Size="Size.Small" 
                                                   Color="Color.Error"
                                                   OnClick="@(() => RemoveFromCart(item))" />
                                </div>
                            </div>
                        </MudPaper>
                    }
                </div>

                <MudDivider Class="my-4" />
                
                <div class="d-flex justify-end mb-2">
                     <MudButton Variant="Variant.Text" 
                                Size="Size.Small" 
                                Color="@(selectedDate?.Date == DateTime.Today ? Color.Default : Color.Warning)"
                                OnClick="@(() => showDatePicker = !showDatePicker)"
                                StartIcon="@Icons.Material.Filled.CalendarMonth">
                        @(selectedDate?.Date == DateTime.Today ? "Backdate Sale" : $"Date: {selectedDate:MM/dd/yyyy}")
                     </MudButton>
                </div>

                @if (showDatePicker)
                {
                    <MudDatePicker Label="Transaction Date" 
                                   @bind-Date="selectedDate" 
                                   MaxDate="@DateTime.Today"
                                   Variant="Variant.Outlined"
                                   Margin="Margin.Dense"
                                   Class="mb-2"
                                   Adornment="Adornment.End"
                                   AdornmentIcon="@Icons.Material.Filled.Event" />
                }

                <div class="d-flex gap-2 mb-2 align-center">
                    <div style="flex: 1; min-width: 0;">
                        <MudAutocomplete T="string"
                                         @ref="_nameAutocomplete"
                                         Label="Customer Name"
                                         Value="customerName"
                                         ValueChanged="OnCustomerNameChanged"
                                         SearchFunc="@SearchCustomersByName"
                                         Variant="Variant.Outlined"
                                         Margin="Margin.Dense"
                                         Clearable="true"
                                         CoerceValue="true"
                                         AdornmentIcon="@Icons.Material.Filled.Person"
                                         ReadOnly="@(selectedCustomer != null)" />
                    </div>
                    <div style="flex: 1; min-width: 0;">
                        <MudAutocomplete T="string"
                                         @ref="_phoneAutocomplete"
                                         Label="Phone Number"
                                         Value="customerPhone"
                                         ValueChanged="OnCustomerPhoneChanged"
                                         SearchFunc="@SearchCustomersByPhone"
                                         Variant="Variant.Outlined"
                                         Margin="Margin.Dense"
                                         Clearable="true"
                                         CoerceValue="true"
                                         AdornmentIcon="@Icons.Material.Filled.Phone"
                                         ReadOnly="@(selectedCustomer != null)" />
                    </div>
                    @if (selectedCustomer != null)
                    {
                        @* Show unpaid order count for selected customer *@
                        @if (unpaidOrderCount > 0)
                        {
                            <MudTooltip Text="Unpaid Orders" Arrow="true">
                                <MudChip T="string" 
                                         Color="Color.Warning" 
                                         Size="Size.Medium"
                                         Style="font-weight: 700; font-size: 14px; min-width: 32px; margin-right: -8px;">
                                    @unpaidOrderCount
                                </MudChip>
                            </MudTooltip>
                        }
                        <MudIconButton Icon="@Icons.Material.Filled.Clear" 
                                       Color="Color.Error" 
                                       OnClick="ClearCustomerSelection" 
                                       Title="Clear Selection" />
                    }
                </div>

                <MudTextField @bind-Value="orderNote"
                              Label="Order Note (Optional)"
                              Variant="Variant.Outlined"
                              Margin="Margin.Dense"
                              Class="mb-2"
                              Lines="1" />

                <div class="d-flex align-center gap-4 mb-2">
                    <MudCheckBox @bind-Value="isDelivery" Label="Delivery" Color="Color.Warning" Dense="true" />
                    <MudCheckBox @bind-Value="printReceipt" Label="Print" Color="Color.Primary" Dense="true" />
                    @if (printReceipt)
                    {
                        <MudDivider Vertical="true" FlexItem="true" Class="mx-2" />
                        <MudRadioGroup T="string" @bind-Value="printFormat" Class="d-flex gap-2">
                            <MudRadio Value="@("A4")" Color="Color.Primary" Dense="true">A4</MudRadio>
                            <MudRadio Value="@("Thermal")" Color="Color.Primary" Dense="true">Thermal</MudRadio>
                        </MudRadioGroup>
                    }
                </div>

                @if (isDelivery)
                {
                    <div class="d-flex gap-2 mb-2 align-center">
                        <div style="flex: 1; min-width: 0;">
                            <MudAutocomplete T="string"
                                             Label="Driver Name"
                                             Value="driverName"
                                             ValueChanged="OnDriverNameChanged"
                                             SearchFunc="@SearchDriversByName"
                                             Variant="Variant.Outlined"
                                             Margin="Margin.Dense"
                                             Clearable="true"
                                             CoerceValue="true"
                                             AdornmentIcon="@Icons.Material.Filled.LocalShipping"
                                             ReadOnly="@(selectedDriver != null)" />
                        </div>
                        <div style="flex: 1; min-width: 0;">
                            <MudAutocomplete T="string"
                                             Label="Driver Phone"
                                             Value="driverPhone"
                                             ValueChanged="OnDriverPhoneChanged"
                                             SearchFunc="@SearchDriversByPhone"
                                             Variant="Variant.Outlined"
                                             Margin="Margin.Dense"
                                             Clearable="true"
                                             CoerceValue="true"
                                             AdornmentIcon="@Icons.Material.Filled.Phone"
                                             ReadOnly="@(selectedDriver != null)" />
                        </div>
                        @if (selectedDriver != null)
                        {
                            @* Show pending delivery count for selected driver (uses PendingDeliveries property from Person model) *@
                            @if (selectedDriver.PendingDeliveries > 0)
                            {
                                <MudTooltip Text="Pending Deliveries" Arrow="true">
                                    <MudChip T="string" 
                                             Color="Color.Warning" 
                                             Size="Size.Medium"
                                             Style="font-weight: 700; font-size: 14px; min-width: 32px; margin-right: -8px;">
                                        @selectedDriver.PendingDeliveries
                                    </MudChip>
                                </MudTooltip>
                            }
                            <MudIconButton Icon="@Icons.Material.Filled.Clear" 
                                           Color="Color.Error" 
                                           OnClick="ClearDriverSelection" 
                                           Title="Clear Selection" />
                        }
                    </div>
                    <MudCheckBox @bind-Value="keepDriverSelected" Label="Keep Driver Selected" Color="Color.Info" Dense="true" Class="ml-n2 mb-2" />
                }

                <MudGrid Spacing="1" Class="align-center">
                    <MudItem xs="5">
                        <MudSelect T="string" Label="Method" @bind-Value="paymentMethod" Variant="Variant.Outlined" Margin="Margin.Dense">
                            <MudSelectItem Value="@("Cash")">Cash</MudSelectItem>
                            <MudSelectItem Value="@("Card")">Card</MudSelectItem>
                            <MudSelectItem Value="@("Transfer")">Transfer</MudSelectItem>
                        </MudSelect>
                    </MudItem>
                    <MudItem xs="7" Class="d-flex align-center gap-2">
                        <MudNumericField @bind-Value="amountPaid" Label="Amount" Variant="Variant.Outlined" Margin="Margin.Dense" Min="0" Class="flex-grow-1" />
                        <MudCheckBox @bind-Value="applyDiscount" Label="Discount" Color="Color.Secondary" Dense="true" CheckedChanged="@((bool val) => OnDiscountToggled(val))" />
                    </MudItem>
                </MudGrid>

                @if (applyDiscount)
                {
                    <MudNumericField Value="discountAmount" ValueChanged="@((decimal val) => OnDiscountChanged(val))" Label="Discount Amount" Variant="Variant.Outlined" Margin="Margin.Dense" Class="mb-2" Min="0" />
                }

                <div class="d-flex justify-space-between align-center mb-4 pa-3" 
                     style="background-color: var(--mud-palette-background-grey); border-radius: 8px;">
                    <MudText Typo="Typo.h6">Total:</MudText>
                    <MudText Typo="Typo.h5" Color="Color.Primary" Class="font-weight-bold cart-total-display">
                        <span class="cart-amount">@CalculateTotal().ToString("F2")</span>
                        <span class="cart-currency">LD</span>
                    </MudText>
                </div>

                @if (currentEmployee?.Role == "System")
                {
                     <MudPaper Class="pa-2 mb-3 d-flex flex-column align-center" Elevation="0" Style="background-color: transparent;">
                        <MudText Typo="Typo.caption" Class="mb-1">Enter Pattern to Complete Sale</MudText>
                        <PatternAuthComponent OnAuthorized="CompleteCheckout" />
                    </MudPaper>
                }
                else
                {
                    <MudButton Variant="Variant.Filled" 
                               Color="Color.Success" 
                               FullWidth="true"
                               Size="Size.Large"
                               StartIcon="@Icons.Material.Filled.Payment"
                               OnClick="@(() => CompleteCheckout(null))"
                               Disabled="@(isProcessing)">
                        @(isProcessing ? "Processing..." : "Complete Sale")
                    </MudButton>
                }

                <MudButton Variant="Variant.Text" 
                           Color="Color.Error" 
                           FullWidth="true"
                           Class="mt-2"
                           StartIcon="@Icons.Material.Filled.Clear"
                           OnClick="async () => await ClearCartAsync()"
                           Disabled="@isProcessing">
                    Clear Cart
                </MudButton>
            }
        </MudPaper>
    </MudItem>
</MudGrid>

@code {

    // =====================================================
    // STATE: Products & Cart
    // =====================================================
    private List<Product>? products;
    private List<TransactionItem> cartItems = new();
    private string searchString = "";
    
    // =====================================================
    // STATE: Customer & Driver Lists
    // =====================================================
    private List<Person> customers = new();
    private List<Person> drivers = new();

    // =====================================================
    // STATE: Success Overlay
    // =====================================================
    private bool showSuccessOverlay = false;
    private Transaction? lastSuccessfulTransaction;
    private decimal lastTransactionPaidAmount;
    private string lastPaymentMethod = "";

    // =====================================================
    // STATE: Customer Selection
    // =====================================================
    private MudAutocomplete<string>? _nameAutocomplete;
    private MudAutocomplete<string>? _phoneAutocomplete;
    private string customerName = "";
    private string customerPhone = "";
    private Person? selectedCustomer = null;
    private int unpaidOrderCount = 0;

    // =====================================================
    // STATE: Order Details & Payment
    // =====================================================
    private DateTime? selectedDate = DateTime.Today;
    private bool showDatePicker = false;
    private string orderNote = "";
    private Person? currentEmployee;
    private bool isProcessing = false;
    private bool printReceipt = false;
    private string printFormat = "A4";
    private string paymentMethod = "Cash";
    private decimal amountPaid;
    private bool applyDiscount = false;
    private decimal discountAmount = 0;

    // =====================================================
    // STATE: Inline Price Editing
    // =====================================================
    private TransactionItem? editingItem = null;
    private string editingPriceValue = "";
    private string editingCostValue = "";
    private MudTextField<string>? priceInputRef;

    // =====================================================
    // STATE: Delivery Options
    // =====================================================
    private bool _isDelivery = false;
    private bool isDelivery
    {
        get => _isDelivery;
        set
        {
            if (_isDelivery != value)
            {
                _isDelivery = value;
                if (_isDelivery)
                {
                    amountPaid = 0;
                }
                else
                {
                    UpdateAmountPaid();
                }
            }
        }
    }
    private Person? selectedDriver = null;
    private string driverName = "";
    private string driverPhone = "";
    private bool keepDriverSelected = false;

    // =====================================================
    // LIFECYCLE: Initialization
    // =====================================================
    protected override async Task OnInitializedAsync()
    {
        // Restore persisted cart and customer/driver state from CartService
        if (CartService.CartItems != null && CartService.CartItems.Any())
        {
            cartItems = new List<TransactionItem>(CartService.CartItems);
        }
        selectedCustomer = CartService.SelectedCustomer;
        customerName = CartService.CustomerName;
        customerPhone = CartService.CustomerPhone;
        orderNote = CartService.OrderNote;
        paymentMethod = CartService.PaymentMethod;
        amountPaid = CartService.AmountPaid;
        applyDiscount = CartService.ApplyDiscount;
        discountAmount = CartService.DiscountAmount;
        printReceipt = CartService.PrintReceipt;
        printFormat = CartService.PrintFormat;
        _isDelivery = CartService.IsDelivery;
        selectedDriver = CartService.SelectedDriver;
        driverName = CartService.DriverName;
        driverPhone = CartService.DriverPhone;

        currentEmployee = await AuthStateProvider.GetCurrentUserAsync();
        if (currentEmployee == null)
        {
             NavigationManager.NavigateTo("/login");
             return;
        }

        await ProductService.RefreshDataAsync();
        await LoadProducts();
        await LoadCustomers();
        await LoadDrivers();

        if (selectedCustomer != null)
        {
            await LoadUnpaidOrderCount();
        }
        
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        var query = uri.Query;
        if (!string.IsNullOrEmpty(query) && query.Contains("scan="))
        {
            // Simple manual parsing to avoid adding dependencies
            var scanIndex = query.IndexOf("scan=") + 5;
            var scanCode = query.Substring(scanIndex);
            var ampersandIndex = scanCode.IndexOf('&');
            if (ampersandIndex > 0)
            {
                scanCode = scanCode.Substring(0, ampersandIndex);
            }
            
            searchString = Uri.UnescapeDataString(scanCode);
            Snackbar.Add($"Scanned: {searchString}", Severity.Success);
            NavigationManager.NavigateTo("/", replace: true);
        }
    }

    // =====================================================
    // DATA LOADING: Products, Customers, Drivers
    // =====================================================
    private async Task LoadProducts()
    {
        try
        {
            products = await ProductService.GetProductsAsync();
        }
        catch (Exception)
        {
        }
    }

    private async Task LoadCustomers()
    {
        try
        {
            customers = await Http.GetFromJsonAsync<List<Person>>("api/people?role=Customer") ?? new();
        }
        catch (Exception)
        {
            // Ignore errors
        }
    }

    private async Task LoadDrivers()
    {
        try
        {
            drivers = await Http.GetFromJsonAsync<List<Person>>("api/people?role=Driver") ?? new();
        }
        catch (Exception)
        {
            // Ignore errors
        }
    }

    private async Task LoadUnpaidOrderCount()
    {
        if (selectedCustomer != null)
        {
            try
            {
                var transactions = await TransactionService.GetTransactionsAsync();
                // Count orders where customer has a balance due (not fully paid)
                unpaidOrderCount = transactions.Count(t => 
                    t.PersonId == selectedCustomer.Id && 
                    t.BalanceDue > 0);
            }
            catch
            {
                unpaidOrderCount = 0;
            }
        }
        else
        {
            unpaidOrderCount = 0;
        }
    }

    // =====================================================
    // AUTOCOMPLETE: Search Functions
    // =====================================================
    private Task<IEnumerable<string>> SearchCustomersByName(string value, CancellationToken token)
    {
        if (string.IsNullOrEmpty(value))
            return Task.FromResult(customers.Where(x => x.Name != null).Select(x => x.Name!));
            
        return Task.FromResult(customers
            .Where(x => x.Name != null && x.Name.Contains(value, StringComparison.InvariantCultureIgnoreCase))
            .Select(x => x.Name!));
    }

    private Task<IEnumerable<string>> SearchDriversByName(string value, CancellationToken token)
    {
        if (string.IsNullOrEmpty(value))
            return Task.FromResult(drivers.Where(x => x.Name != null).Select(x => x.Name!));
            
        return Task.FromResult(drivers
            .Where(x => x.Name != null && x.Name.Contains(value, StringComparison.InvariantCultureIgnoreCase))
            .Select(x => x.Name!));
    }

    private Task<IEnumerable<string>> SearchDriversByPhone(string value, CancellationToken token)
    {
        if (string.IsNullOrEmpty(value))
            return Task.FromResult(drivers.Where(x => !string.IsNullOrEmpty(x.PhoneNumber)).Select(x => x.PhoneNumber!));
            
        return Task.FromResult(drivers
            .Where(x => !string.IsNullOrEmpty(x.PhoneNumber) && x.PhoneNumber.Contains(value, StringComparison.InvariantCultureIgnoreCase))
            .Select(x => x.PhoneNumber!));
    }

    private Task<IEnumerable<string>> SearchCustomersByPhone(string value, CancellationToken token)
    {
        if (string.IsNullOrEmpty(value))
            return Task.FromResult(customers.Where(x => !string.IsNullOrEmpty(x.PhoneNumber)).Select(x => x.PhoneNumber!));
            
        return Task.FromResult(customers
            .Where(x => !string.IsNullOrEmpty(x.PhoneNumber) && x.PhoneNumber.Contains(value))
            .Select(x => x.PhoneNumber!));
    }

    // =====================================================
    // SELECTION HANDLERS: Customer & Driver
    // =====================================================
    private async Task OnCustomerNameChanged(string value)
    {
        customerName = value;
        var match = customers.FirstOrDefault(c => c.Name != null && c.Name.Equals(value, StringComparison.InvariantCultureIgnoreCase));
        if (match != null)
