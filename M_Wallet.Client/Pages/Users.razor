                    @if (_customerColumns.IsVisible("Name")) { <MudTd DataLabel="Name">@context.Name</MudTd> }
                    @if (_customerColumns.IsVisible("Phone Number")) { <MudTd DataLabel="Phone Number">@context.PhoneNumber</MudTd> }
                    @if (_customerColumns.IsVisible("Balance")) { 
                        <MudTd DataLabel="Balance">
                            <MudText Color="@(context.Balance < 0 ? Color.Error : Color.Success)">
                                @context.Balance.ToString("F2")
                            </MudText>
