                    @if (_customerColumns.IsVisible("Name")) { <MudTh><MudTableSortLabel SortBy="new Func<Person, object>(x => x.Name)">Name</MudTableSortLabel></MudTh> }
                    @if (_customerColumns.IsVisible("Phone Number")) { <MudTh><MudTableSortLabel SortBy="new Func<Person, object>(x => x.PhoneNumber)">Phone Number</MudTableSortLabel></MudTh> }
                    @if (_customerColumns.IsVisible("Balance")) { <MudTh><MudTableSortLabel SortBy="new Func<Person, object>(x => x.Balance)">Balance</MudTableSortLabel></MudTh> }
                    @if (_customerColumns.IsVisible("Total Spent")) { <MudTh><MudTableSortLabel SortBy="new Func<Person, object>(x => x.TotalSpent)">Total Spent</MudTableSortLabel></MudTh> }
                    @if (_customerColumns.IsVisible("Total Profit")) { <MudTh><MudTableSortLabel SortBy="new Func<Person, object>(x => x.TotalProfit)">Total Profit</MudTableSortLabel></MudTh> }
                    @if (_customerColumns.IsVisible("Last Transaction")) { <MudTh><MudTableSortLabel SortBy="new Func<Person, object>(x => x.LastTransactionDate)">Last Transaction</MudTableSortLabel></MudTh> }
                    @if (_customerColumns.IsVisible("Actions")) { <MudTh>Actions</MudTh> }
                </HeaderContent>
