                    @if (_customerColumns.IsVisible("Last Transaction")) { <MudTd DataLabel="Last Transaction" Style="white-space: nowrap;">@context.LastTransactionDate.ToDisplayString()</MudTd> }
                    @if (_customerColumns.IsVisible("Actions")) {
